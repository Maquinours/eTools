<ui:ContentDialog
    x:Class="eTools_Ultimate.Views.Dialogs.MoverReferenceModelDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModels="clr-namespace:eTools_Ultimate.ViewModels.Controls.Dialogs"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{i18n:StringLocalizer 'Select Reference Model'}"
    d:DataContext="{d:DesignInstance dialogViewModels:MoverReferenceModelViewModel,
                                     IsDesignTimeCreatable=False}"
    IsPrimaryButtonEnabled="True"
    PrimaryButtonText="{i18n:StringLocalizer 'Accept'}"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:MoverReferenceModelDialog}" />
        <Style x:Key="AppListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>
    </ui:ContentDialog.Resources>
    <Grid Margin="20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="16"
            Text="{i18n:StringLocalizer 'Please select a reference model:'}" />

        <ui:Card Grid.Row="1" Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ui:TextBox
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Icon="Search24"
                    PlaceholderText="{i18n:StringLocalizer 'Search models...'}"
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ListView
                    x:Name="ModelsListView"
                    Grid.Row="1"
                    Height="250"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding MoversView, Mode=OneWay}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Style="{StaticResource AppListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Name, Mode=OneWay}" />
                                    <TextBlock
                                        Opacity="0.7"
                                        Text="{Binding Identifier, Mode=OneWay}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ui:Card>
    </Grid>

</ui:ContentDialog>
<Window x:Class="eTools_Ultimate.Views.Dialogs.MoverReferenceModelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reference Model" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Close Button-->
        <Button Grid.Row="0" 
                Content="✕"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Width="24" 
                Height="24"
                Margin="0,-15,-15,0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Click="CloseButton_Click"/>

        <!-- Titel Reference Model -->
        <TextBlock Grid.Row="0"
                   Text="Reference Model"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- TextBox-->
        <TextBox Grid.Row="1"
                 Text="Select a Model..."
                 VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"
                 Padding="5"
                 FontStyle="Italic"
                 Foreground="Gray"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Height="30"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    IsCancel="True"
                    Margin="10,0,0,0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
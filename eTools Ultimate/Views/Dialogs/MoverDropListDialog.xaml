<ui:ContentDialog
    x:Class="eTools_Ultimate.Views.Dialogs.MoverDropListDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:eTools_Ultimate.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:eTools_Ultimate.ViewModels.Controls.Dialogs"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance viewmodels:MoverDropListDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    CloseButtonText="{i18n:StringLocalizer 'Close'}"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:MoverDropListDialog}" />
    </ui:ContentDialog.Resources>

    <Grid Height="300" Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Width="300"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <TreeView
                x:Name="DropListTreeView"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding DropListView}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type models:DropKind}" ItemsSource="{Binding Items}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁 " />
                            <TextBlock Text="{Binding ItemKind3Identifier}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type models:DropItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Width="32"
                                Height="32"
                                Margin="0,0,8,0"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1">
                                <Image
                                    Margin="2"
                                    Source="{Binding Item.Icon}"
                                    Stretch="Uniform" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Item.Name}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding Item.Identifier}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type models:Item}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Width="32"
                                Height="32"
                                Margin="0,0,8,0"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1">
                                <Image
                                    Margin="2"
                                    Source="{Binding Icon}"
                                    Stretch="Uniform" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding Identifier}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Border>
        <UniformGrid
            Grid.Column="1"
            Width="400"
            VerticalAlignment="Top"
            Columns="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{i18n:StringLocalizer 'Item'}" />
                <ui:AutoSuggestBox
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    DisplayMemberPath="Value"
                    OriginalItemsSource="{Binding ItemIdentifiers, Mode=OneWay}"
                    Text="{Binding SelectedItem.Item.Identifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ElementName=DropListTreeView}" />
            </Grid>
            <Grid Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{i18n:StringLocalizer 'Quantity'}" />
                <ui:NumberBox
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    ClearButtonEnabled="False"
                    Value="{Binding SelectedItem.Prop.DwNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=DropListTreeView}" />
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{i18n:StringLocalizer 'Level'}" />
                <ui:NumberBox
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    ClearButtonEnabled="False"
                    Cursor="Arrow"
                    Value="{Binding SelectedItem.Prop.DwLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=DropListTreeView}" />
            </Grid>
            <Grid Margin="15,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{i18n:StringLocalizer 'Probability'}" />
                <ui:NumberBox
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    ClearButtonEnabled="False"
                    Value="{Binding SelectedItem.ProbabilityPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=DropListTreeView}" />
            </Grid>
        </UniformGrid>
    </Grid>
</ui:ContentDialog>

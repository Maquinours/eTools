<ui:ContentDialog
    x:Class="eTools_Ultimate.Views.Dialogs.AddMoverAiBindingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Controls.Dialogs"
    Title="{Binding Title, Mode=OneWay}"
    d:DataContext="{d:DesignInstance vm:AddMoverAiBindingDialogViewModel,
                                     IsDesignTimeCreatable=False}"
    CloseButtonText="{i18n:StringLocalizer 'Close'}"
    IsPrimaryButtonEnabled="True"
    PrimaryButtonText="{i18n:StringLocalizer 'Add'}"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:AddMoverAiBindingDialog}" />
    </ui:ContentDialog.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Content Area  -->
        <ScrollViewer
            Grid.Row="0"
            Margin="20,20,0,0"
            VerticalScrollBarVisibility="Visible">
            <StackPanel Margin="0,0,0,0">
                <ui:AutoSuggestBox
                    OriginalItemsSource="{Binding AvailableItems, Mode=OneWay}"
                    PlaceholderText="Search AI..."
                    Text="{Binding Item, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:ContentDialog>

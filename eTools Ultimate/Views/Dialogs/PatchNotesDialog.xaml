<ui:ContentDialog
    x:Class="eTools_Ultimate.Views.Dialogs.PatchNotesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:eTools_Ultimate.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModels="clr-namespace:eTools_Ultimate.ViewModels.Controls.Dialogs"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance dialogViewModels:PatchNotesViewModel,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:PatchNotesDialog}" />
        <!--  Iconstyles für die verschiedenen Änderungstypen  -->
        <Style x:Key="IconBase" TargetType="ui:SymbolIcon">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style
            x:Key="AddedIcon"
            BasedOn="{StaticResource IconBase}"
            TargetType="ui:SymbolIcon">
            <Setter Property="Foreground" Value="#4CAF50" />
            <Setter Property="Symbol" Value="Add24" />
        </Style>

        <Style
            x:Key="ChangedIcon"
            BasedOn="{StaticResource IconBase}"
            TargetType="ui:SymbolIcon">
            <Setter Property="Foreground" Value="#FF9800" />
            <Setter Property="Symbol" Value="Wrench24" />
        </Style>

        <Style
            x:Key="RemovedIcon"
            BasedOn="{StaticResource IconBase}"
            TargetType="ui:SymbolIcon">
            <Setter Property="Foreground" Value="#F44336" />
            <Setter Property="Symbol" Value="Delete24" />
        </Style>

        <Style
            x:Key="FixedIcon"
            BasedOn="{StaticResource IconBase}"
            TargetType="ui:SymbolIcon">
            <Setter Property="Foreground" Value="#9C27B0" />
            <Setter Property="Symbol" Value="Bug24" />
        </Style>

        <Style
            x:Key="ImprovedIcon"
            BasedOn="{StaticResource IconBase}"
            TargetType="ui:SymbolIcon">
            <Setter Property="Foreground" Value="#2196F3" />
            <Setter Property="Symbol" Value="ArrowCircleUp24" />
        </Style>

        <Style
            x:Key="UpdatedIcon"
            BasedOn="{StaticResource IconBase}"
            TargetType="ui:SymbolIcon">
            <Setter Property="Foreground" Value="#FFD700" />
            <Setter Property="Symbol" Value="ArrowSync24" />
        </Style>

        <!--  Stile für die Textblöcke  -->
        <Style x:Key="VersionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="Margin" Value="0,8,0,4" />
        </Style>

        <Style x:Key="VersionDate" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
            <Setter Property="Margin" Value="8,10,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="ChangeText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>

        <!--  DataTemplate für einen Bullet Point  -->
        <DataTemplate x:Key="BulletPointTemplate">
            <Grid Margin="0,4,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ContentControl Grid.Column="0" Content="{Binding Icon}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ChangeText}"
                    Text="{Binding Text}" />
            </Grid>
        </DataTemplate>
        <converters:PatchModificationTypeToSymbolConverter x:Key="PatchModificationTypeToSymbolConverter" />
        <converters:PatchModificationTypeToForegroundConverter x:Key="PatchModificationTypeToForegroundConverter" />
        <converters:PatchModificationTypeToTextConverter x:Key="PatchModificationTypeToTextConverter" />
        
        <!-- Visibility Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
        <converters:InverseObjectToVisibilityConverter x:Key="InverseObjectToVisibilityConverter" />
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </ui:ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Banner -->
            <Border 
                Grid.Row="0"
                Margin="0,0,0,20"
                Background="{DynamicResource AccentFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <ui:SymbolIcon
                        Grid.Column="0"
                        Margin="0,0,16,0"
                        FontSize="32"
                        Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                        Symbol="DocumentText24" />
                    
                    <!-- Title and Subtitle -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                            Text="{i18n:StringLocalizer 'Patch Notes'}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            Foreground="{DynamicResource TextOnAccentFillColorSecondaryBrush}"
                            Text="{i18n:StringLocalizer 'Neueste Updates und Verbesserungen'}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Legende  -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding ModificationTypes, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Grid.Row="1" Margin="0,0,0,16" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,16,0" Orientation="Horizontal">
                            <ui:SymbolIcon
                                FontSize="12"
                                Foreground="{Binding Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                Symbol="{Binding Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                            <TextBlock
                                Margin="4,0,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding Mode=OneWay, Converter={StaticResource PatchModificationTypeToTextConverter}}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  Changelog-Inhalt mit Scrollbar  -->
            <ScrollViewer
                Grid.Row="2"
                Height="400"
                Background="{DynamicResource ApplicationBackgroundBrush}"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Visible">
                <StackPanel x:Name="ChangelogContent" Margin="0,8,16,0">
                    <ItemsControl ItemsSource="{Binding Patches, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!-- Version Banner -->
                                    <Border 
                                        Grid.Row="0"
                                        Margin="0,0,0,12"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Version Icon -->
                                            <ui:SymbolIcon
                                                Grid.Column="0"
                                                Margin="0,0,12,0"
                                                FontSize="20"
                                                Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                                Symbol="Tag24" />
                                            
                                            <!-- Version Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    Text="{Binding Version, Mode=OneWay}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                            
                                            <!-- Date -->
                                            <TextBlock
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                Text="{Binding Date, Mode=OneWay, StringFormat='dd.MM.yyyy'}" />
                                        </Grid>
                                    </Border>
                                    <!-- Developer Text -->
                                    <TextBlock 
                                        Grid.Row="1" 
                                        Margin="16,8,16,8"
                                        FontSize="14"
                                        FontStyle="Italic"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding DeveloperText, Mode=OneWay}"
                                        TextWrapping="Wrap"
                                        Visibility="{Binding DeveloperText, Converter={StaticResource StringToVisibilityConverter}}" />
                                    
                                    <!-- Image -->
                                    <Image 
                                        Grid.Row="2" 
                                        Margin="16,8,16,8"
                                        Height="60"
                                        Source="{Binding ImagePath, Mode=OneWay}"
                                        Stretch="Uniform"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding ImagePath, Converter={StaticResource StringToVisibilityConverter}}" />
                                    
                                    <!-- Categories -->
                                    <StackPanel Grid.Row="3" Margin="16,8,0,0" Visibility="{Binding Categories, Converter={StaticResource ObjectToVisibilityConverter}}">
                                        <!-- Added -->
                                        <StackPanel Margin="0,0,0,12" Visibility="{Binding Categories.Added, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <TextBlock 
                                                FontSize="16" 
                                                FontWeight="SemiBold" 
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{i18n:StringLocalizer 'Added'}"
                                                Margin="0,0,0,8" />
                                            <ItemsControl ItemsSource="{Binding Categories.Added, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4,0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <ui:SymbolIcon
                                                                Grid.Column="0"
                                                                Margin="0,0,8,0"
                                                                VerticalAlignment="Top"
                                                                FontSize="16"
                                                                Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                                Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                FontSize="13"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Text="{Binding Text, Mode=OneWay}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        
                                        <!-- Changed -->
                                        <StackPanel Margin="0,0,0,12" Visibility="{Binding Categories.Changed, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <TextBlock 
                                                FontSize="16" 
                                                FontWeight="SemiBold" 
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{i18n:StringLocalizer 'Changed'}"
                                                Margin="0,0,0,8" />
                                            <ItemsControl ItemsSource="{Binding Categories.Changed, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4,0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <ui:SymbolIcon
                                                                Grid.Column="0"
                                                                Margin="0,0,8,0"
                                                                VerticalAlignment="Top"
                                                                FontSize="16"
                                                                Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                                Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                FontSize="13"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Text="{Binding Text, Mode=OneWay}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        
                                        <!-- Fixed -->
                                        <StackPanel Margin="0,0,0,12" Visibility="{Binding Categories.Fixed, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <TextBlock 
                                                FontSize="16" 
                                                FontWeight="SemiBold" 
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{i18n:StringLocalizer 'Fixed'}"
                                                Margin="0,0,0,8" />
                                            <ItemsControl ItemsSource="{Binding Categories.Fixed, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4,0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <ui:SymbolIcon
                                                                Grid.Column="0"
                                                                Margin="0,0,8,0"
                                                                VerticalAlignment="Top"
                                                                FontSize="16"
                                                                Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                                Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                FontSize="13"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Text="{Binding Text, Mode=OneWay}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        
                                        <!-- Improved -->
                                        <StackPanel Margin="0,0,0,12" Visibility="{Binding Categories.Improved, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <TextBlock 
                                                FontSize="16" 
                                                FontWeight="SemiBold" 
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{i18n:StringLocalizer 'Improved'}"
                                                Margin="0,0,0,8" />
                                            <ItemsControl ItemsSource="{Binding Categories.Improved, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4,0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <ui:SymbolIcon
                                                                Grid.Column="0"
                                                                Margin="0,0,8,0"
                                                                VerticalAlignment="Top"
                                                                FontSize="16"
                                                                Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                                Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                FontSize="13"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Text="{Binding Text, Mode=OneWay}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        
                                        <!-- Removed -->
                                        <StackPanel Margin="0,0,0,12" Visibility="{Binding Categories.Removed, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <TextBlock 
                                                FontSize="16" 
                                                FontWeight="SemiBold" 
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{i18n:StringLocalizer 'Removed'}"
                                                Margin="0,0,0,8" />
                                            <ItemsControl ItemsSource="{Binding Categories.Removed, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4,0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <ui:SymbolIcon
                                                                Grid.Column="0"
                                                                Margin="0,0,8,0"
                                                                VerticalAlignment="Top"
                                                                FontSize="16"
                                                                Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                                Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                FontSize="13"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Text="{Binding Text, Mode=OneWay}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        
                                        <!-- Updated -->
                                        <StackPanel Margin="0,0,0,12" Visibility="{Binding Categories.Updated, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <TextBlock 
                                                FontSize="16" 
                                                FontWeight="SemiBold" 
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{i18n:StringLocalizer 'Updated'}"
                                                Margin="0,0,0,8" />
                                            <ItemsControl ItemsSource="{Binding Categories.Updated, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,4,0,4">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <ui:SymbolIcon
                                                                Grid.Column="0"
                                                                Margin="0,0,8,0"
                                                                VerticalAlignment="Top"
                                                                FontSize="16"
                                                                Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                                Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                FontSize="13"
                                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                Text="{Binding Text, Mode=OneWay}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Fallback: Old Modifications List -->
                                    <StackPanel Grid.Row="4" Margin="16,8,0,0" Visibility="{Binding Categories, Converter={StaticResource InverseObjectToVisibilityConverter}}">
                                        <ItemsControl ItemsSource="{Binding Modifications, Mode=OneWay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,4,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <ui:SymbolIcon
                                                            Grid.Column="0"
                                                            Margin="0,0,8,0"
                                                            VerticalAlignment="Top"
                                                            FontSize="16"
                                                            Foreground="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToForegroundConverter}}"
                                                            Symbol="{Binding Type, Mode=OneWay, Converter={StaticResource PatchModificationTypeToSymbolConverter}}" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            FontSize="13"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="{Binding Text, Mode=OneWay}"
                                                            TextWrapping="Wrap" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</ui:ContentDialog>

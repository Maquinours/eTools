<Page
    x:Class="eTools_Ultimate.Views.Pages.Accessory.AccessoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:eTools_Ultimate.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages.Accessory"
    xmlns:viewmodels="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AccessoryPage"
    d:DataContext="{d:DesignInstance viewmodels:AccessoriesViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    ui:Design.Background="{StaticResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{StaticResource TextFillColorPrimaryBrush}"
    Foreground="{StaticResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d" Cursor="">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!--  Static Colors for Dark Theme  -->
        <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#A0A0A0" />
        <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#2D2D30" />
        <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="#404040" />
        <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#3F3F46" />
        <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#1E1E1E" />
        <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#1E1E1E" />

        <!--  TextBox Style  -->
        <Style
            x:Key="AppTextBoxStyle"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ControlFillColorDefaultBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextFillColorPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="Padding" Value="8,5" />
        </Style>

        <!--  ListView Style  -->
        <Style x:Key="AppListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextFillColorPrimaryBrush}" />
        </Style>

        <!--  ListViewItem Style  -->
        <Style x:Key="AppListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextFillColorPrimaryBrush}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ControlFillColorSecondaryBrush}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource ControlFillColorDefaultBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource TextFillColorPrimaryBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - ListView  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{StaticResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10,10,10,10"
                    BorderThickness="0"
                    Icon="Search24"
                    PlaceholderText="Suche..."
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  Accessory List  -->
            <Border
                Grid.Row="1"
                Margin="0,0,10,0"
                Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{StaticResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1">
                <ListView
                    x:Name="AccessoriesListView"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding AccessoriesView}"
                    SelectedIndex="0"
                    Style="{StaticResource AppListViewStyle}">
                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource AppListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="Padding" Value="8,4" />
                            <Setter Property="Margin" Value="0,1" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    Background="{StaticResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{StaticResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Image
                                        Margin="2"
                                        Source="{Binding Item.Icon}"
                                        Stretch="Uniform" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource TextFillColorPrimaryBrush}"
                                        Text="{Binding Item.Name}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{StaticResource TextFillColorSecondaryBrush}"
                                        Text="{Binding Item.Identifier}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{StaticResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{StaticResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{StaticResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Details  -->
        <Border
            Grid.Column="2"
            Margin="5,5,5,5"
            Padding="16"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="8">
            <Grid>
                <!--  Add and Delete Buttons top right  -->
                <StackPanel
                    Margin="0,10,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    ZIndex="1">
                    <ui:Button Command="{Binding UndoCommand}" ToolTip="Undo">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>
                    <ui:Button
                        Margin="10,0,10,0"
                        Command="{Binding RedoCommand}"
                        ToolTip="Redo">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>
                    <ui:Button
                        x:Name="SaveButton"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Content="Save" />
                    <ui:Button
                        x:Name="ExportButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Export" />
                    <ui:Button
                        x:Name="FilterButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Filter" />
                    <ui:Button
                        x:Name="AddButton"
                        Margin="0,0,10,0"
                        Appearance="Primary"
                        Background="{StaticResource ControlFillColorDefaultBrush}"
                        Foreground="{StaticResource TextFillColorPrimaryBrush}"
                        Click="AddButton_Click"
                        Content="Add" />
                    <ui:Button
                        x:Name="DeleteButton"
                        Background="#FD292F"
                        Foreground="White"
                        Click="DeleteButton_Click"
                        Content="Delete" />
                </StackPanel>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Accessory Title  -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding SelectedItem.Item.Identifier, Mode=OneWay, ElementName=AccessoriesListView}" />
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding ElementName="AccessoriesListView" Path="SelectedItem.Item.Name" />
                                <Binding ElementName="AccessoriesListView" Path="SelectedItem.Item.Description" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!--  Accessory Actions  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,16"
                    Orientation="Horizontal">
                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Secondary"
                        Command="{Binding DataContext.AddAbilityOptionDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        Content="New Level"
                        Icon="Add24" />
                </StackPanel>

                <!--  Accessory Stats - Card View  -->
                <ScrollViewer
                    x:Name="AccessoryScrollViewer"
                    Grid.Row="2"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SelectedItem.AbilityOptionData, Mode=OneWay, ElementName=AccessoriesListView}">
                        <!--  Single column layout  -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,12"
                                    Padding="16"
                                    BorderBrush="{StaticResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6" Tag="{Binding}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Level Header with Actions  -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                FontWeight="SemiBold"
                                                Text="{Binding NAbilityOption, StringFormat='Level {0}'}" />

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <!--  Delete with Confirmation  -->
                                                <ui:Button
                                                    Width="32"
                                                    Height="32"
                                                    Padding="0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Appearance="Danger"
                                                    Command="{Binding DataContext.DeleteAbilityOptionDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Delete Level">
                                                    <ui:SymbolIcon Symbol="Delete24" />
                                                </ui:Button>
                                            </StackPanel>
                                        </Grid>

                                        <!--  Attributes  -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding DstData}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,6">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="180" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <!--  Attribute Dropdown  -->
                                                        <ui:AutoSuggestBox
                                                            Grid.Column="0"
                                                            Margin="0,0,12,0"
                                                            FontSize="14"
                                                            OriginalItemsSource="{Binding DataContext.PossibleDstValues, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            Text="{Binding DestIdentifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

                                                        <!--  Value Input mit manueller Eingabe und Pfeilen  -->
                                                        <Grid Grid.Column="1" Margin="0,0,8,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <!--  Editierbare Textbox  -->
                                                            <ui:NumberBox
                                                                Name="ValueTextBox"
                                                                Grid.Column="0"
                                                                Value="{Binding NAdj, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        </Grid>

                                                        <!--  Delete Attribute Button  -->
                                                        <ui:Button
                                                            Grid.Column="2"
                                                            Width="28"
                                                            Height="28"
                                                            Padding="0"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Appearance="Secondary"
                                                            Command="{Binding DataContext.DeleteDstDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Delete Attribute">
                                                            <ui:SymbolIcon Symbol="Dismiss24" />
                                                        </ui:Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!--  Add Attribute Button  -->
                                        <ui:Button
                                            Grid.Row="2"
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Left"
                                            Appearance="Secondary"
                                            Command="{Binding DataContext.AddDstDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Margin="0,0,4,0"
                                                    Text="âž•" />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Text="Add Attribute" />
                                            </StackPanel>
                                        </ui:Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>

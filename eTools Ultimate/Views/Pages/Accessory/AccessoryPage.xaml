<Page
    x:Class="eTools_Ultimate.Views.Pages.Accessory.AccessoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages.Accessory"
    xmlns:converters="clr-namespace:eTools_Ultimate.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AccessoryPage"
    d:DataContext="{d:DesignInstance local:AccessoryPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- TextBox Style -->
        <Style x:Key="AppTextBoxStyle" 
               TargetType="TextBox" 
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Background" 
                    Value="{DynamicResource ControlFillColorDefaultBrush}"/>
            <Setter Property="Foreground" 
                    Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="BorderBrush" 
                    Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" 
                    Value="8,5"/>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="AppComboBoxStyle" 
               TargetType="ComboBox" 
               BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" 
                    Value="{DynamicResource ControlFillColorDefaultBrush}"/>
            <Setter Property="Foreground" 
                    Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="BorderBrush" 
                    Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
        </Style>
        
        <!-- Button Style -->
        <Style x:Key="AppButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="{DynamicResource ControlFillColorDefaultBrush}"/>
            <Setter Property="Foreground" 
                    Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="BorderBrush" 
                    Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" 
                    Value="8,5"/>
        </Style>
        
        <!-- ListView Style -->
        <Style x:Key="AppListViewStyle" 
               TargetType="ListView">
            <Setter Property="Background" 
                    Value="Transparent"/>
            <Setter Property="BorderBrush" 
                    Value="Transparent"/>
            <Setter Property="BorderThickness" 
                    Value="0"/>
            <Setter Property="Foreground" 
                    Value="{DynamicResource TextFillColorPrimaryBrush}"/>
        </Style>
        
        <!-- ListViewItem Style -->
        <Style x:Key="AppListViewItemStyle" 
               TargetType="ListViewItem">
            <Setter Property="Background" 
                    Value="Transparent"/>
            <Setter Property="Foreground" 
                    Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                    <Setter Property="Foreground" 
                            Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - ListView -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Grid.Row="0"
                    BorderThickness="1,1,1,0"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,0,10,0">
                <ui:TextBox 
                            PlaceholderText="Suche..."
                            Icon="Search24"
                            BorderThickness="0"
                            Margin="10,10,10,10"
                            Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>

            <!-- Accessory List -->
            <Border Grid.Row="1"
                    BorderThickness="1,0,1,1"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,0,10,0">
                <ListView x:Name="AccessoriesListView"
                          Style="{StaticResource AppListViewStyle}"
                          ItemsSource="{Binding ViewModel.AccessoriesView}"
                          BorderThickness="0"
                          Background="Transparent"
                          SelectedIndex="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource AppListViewItemStyle}">
                            <Setter Property="Padding" 
                                    Value="8,4" />
                            <Setter Property="Margin" 
                                    Value="0,1" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="32"
                                        Height="32"
                                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        Margin="0,0,8,0">
                                    <Image Stretch="Uniform"
                                           Margin="2"
                                           Source="{Binding Item.Icon}"/>
                                </Border>
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Item.Name}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Item.Id}"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <!-- Separator -->
        <GridSplitter Grid.Column="1"
                      Width="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!-- Right Side - Details -->
        <Border Grid.Column="2"
                Padding="16"
                Margin="5,5,5,5"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Accessory Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding SelectedItem.Item.Id, Mode=OneWay, ElementName=AccessoriesListView}" />
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="SelectedItem.Item.Name" ElementName="AccessoriesListView" />
                                <Binding Path="SelectedItem.Item.Description" ElementName="AccessoriesListView" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Accessory Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Secondary"
                        Icon="Add24"
                        Content="New Level"
                        Command="{Binding DataContext.AddAbilityOptionDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                </StackPanel>

                <!-- Accessory Stats - Card View -->
                <ScrollViewer x:Name="AccessoryScrollViewer" Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SelectedItem.AbilityOptionData, Mode=OneWay, ElementName=AccessoriesListView}">
                        <!-- Single column layout -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border 
                                    BorderThickness="1"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    CornerRadius="6"
                                    Margin="0,0,0,12"
                                    Padding="16">
                                    <Grid Tag="{Binding}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Level Header with Actions -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                                Grid.Column="0"
                                                Text="{Binding NAbilityOption, StringFormat='Level {0}'}"
                                                FontSize="18"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center" />

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <!-- Delete with Confirmation -->
                                                <ui:Button
                                                    Margin="4,0"
                                                    Padding="6,2"
                                                    ToolTip="Delete Level"
                                                    Appearance="Danger"
                                                    Command="{Binding DataContext.DeleteAbilityOptionDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}">
                                                    <Grid>
                                                        <ui:SymbolIcon Symbol="Delete24" />
                                                    </Grid>
                                                </ui:Button>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Attributes -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding DstData}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,6">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="180" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Attribute Dropdown -->
                                                        <ComboBox 
                                                            Grid.Column="0"
                                                            Margin="0,0,12,0"
                                                            FontSize="14"
                                                            Style="{StaticResource AppComboBoxStyle}"
                                                            SelectedItem="{Binding NDst, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            ItemsSource="{Binding ViewModel.PossibleDstValues, RelativeSource={RelativeSource AncestorType=Page}}" />

                                                        <!-- Value Input mit manueller Eingabe und Pfeilen -->
                                                        <Grid Grid.Column="1" Margin="0,0,8,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Editierbare Textbox -->
                                                            <TextBox 
                                                                Name="ValueTextBox"
                                                                Grid.Column="0"
                                                                Style="{StaticResource AppTextBoxStyle}"
                                                                HorizontalContentAlignment="Right"
                                                                VerticalContentAlignment="Center"
                                                                FontSize="14"
                                                                Text="{Binding NAdj, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                                <TextBox.InputBindings>
                                                                    <KeyBinding Key="Return" 
                                                                               Command="{Binding DataContext.UpdateValueCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                               CommandParameter="{Binding}"/>
                                                                </TextBox.InputBindings>
                                                            </TextBox>

                                                            <!-- Spinner-Knöpfe -->
                                                            <StackPanel Grid.Column="1" Orientation="Vertical" Width="24" Margin="2,0,0,0">
                                                                <Button 
                                                                    Content="▲" 
                                                                    Height="16" 
                                                                    Padding="0" 
                                                                    Margin="0,0,0,1"
                                                                    Style="{StaticResource AppButtonStyle}"
                                                                    BorderThickness="1"
                                                                    Command="{Binding DataContext.IncrementValueCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                    CommandParameter="{Binding}"/>
                                                                <Button 
                                                                    Content="▼" 
                                                                    Height="16" 
                                                                    Padding="0" 
                                                                    Margin="0,1,0,0"
                                                                    Style="{StaticResource AppButtonStyle}"
                                                                    BorderThickness="1"
                                                                    Command="{Binding DataContext.DecrementValueCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                    CommandParameter="{Binding}"/>
                                                            </StackPanel>
                                                        </Grid>

                                                        <!-- Delete Attribute Button -->
                                                        <Button 
                                                            Grid.Column="2"
                                                            Padding="4"
                                                            Style="{StaticResource AppButtonStyle}"
                                                            BorderThickness="1"
                                                            Visibility="{Binding CanDelete, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.DeleteDstDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}">
                                                            <TextBlock Text="❌" FontSize="12" />
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Add Attribute Button -->
                                        <Button 
                                            Grid.Row="2" 
                                            Margin="0,8,0,0"
                                            Style="{StaticResource AppButtonStyle}"
                                            HorizontalAlignment="Left"
                                            Command="{Binding DataContext.AddDstDataCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="➕" FontSize="12" VerticalAlignment="Center" />
                                                <TextBlock Text="Add Attribute" Margin="4,0,0,0" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        <ContentPresenter Grid.Column="0" Grid.ColumnSpan="3" x:Name="RootContentDialogPresenter" />
    </Grid>
</Page>

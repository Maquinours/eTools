<Page
    x:Class="eTools_Ultimate.Views.Pages.AccessoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:converters="clr-namespace:eTools_Ultimate.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AccessoryPage"
    d:DataContext="{d:DesignInstance local:AccessoryPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:EnglishNumberConverter x:Key="EnglishNumberConverter" />
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - ListView -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Grid Grid.Row="0"
                  Margin="5,5,15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ui:TextBox Grid.Column="0"
                            PlaceholderText="Search accessories..."
                            Icon="Search24"/>
            </Grid>

            <!-- Accessory List -->
            <Border Grid.Row="1"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="5,5,15,5">
                <ListView x:Name="AccessoriesListView"
                          BorderThickness="0"
                          Background="Transparent"
                          SelectedIndex="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="BorderBrush"
                                    Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
                            <Setter Property="Padding" 
                                    Value="8,4" />
                            <Setter Property="Margin" 
                                    Value="0,1" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListViewItem>II_GEN_JEW_RIN_STRRING</ListViewItem>
                    <ListViewItem>II_GEN_JEW_RIN_STARING</ListViewItem>
                    <ListViewItem>II_GEN_JEW_RIN_DEXRING</ListViewItem>
                    <ListViewItem>II_GEN_JEW_RIN_INTRING</ListViewItem>
                    <ListViewItem>II_GEN_JEW_EAR_ATTEARRING</ListViewItem>
                    <ListViewItem>II_GEN_JEW_EAR_DEFEARRING</ListViewItem>
                    <ListViewItem>II_GEN_JEW_NEC_HPNECKLACE</ListViewItem>
                    <ListViewItem>II_GEN_JEW_NEC_MPNECKLACE</ListViewItem>
                </ListView>
            </Border>
        </Grid>

        <!-- Separator -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="{DynamicResource ControlElevationBorderBrush}"/>

        <!-- Right Side - Details -->
        <Border Grid.Column="2"
                Padding="16"
                Margin="5,5,5,5"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Accessory Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="II_GEN_JEW_RIN_STRRING" />
                    <TextBlock
                        Text="Strength Ring - Increases character's strength"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Accessory Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Secondary"
                        Icon="Add24"
                        Content="New Level" />
                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Secondary"
                        Icon="Delete24"
                        Content="Delete Level" />
                </StackPanel>

                <!-- Accessory Stats - Card View -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AccessoryLevels}">
                        <!-- Single column layout -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border 
                                    Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,0,0,12"
                                    Padding="16">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Level Header with Actions -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock 
                                                Grid.Column="0"
                                                Text="{Binding LevelDisplay, StringFormat='Level {0}'}"
                                                FontSize="18"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center" />
                                                
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <!-- Delete with Confirmation -->
                                                <Button
                                                    Margin="4,0"
                                                    Padding="6,2"
                                                    ToolTip="Delete Level"
                                                    Command="{Binding DataContext.DeleteWithConfirmationCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}">
                                                    <TextBlock Text="🗑️" FontSize="14" VerticalAlignment="Center"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <!-- Attributes -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Attributes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,6">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="180" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Attribute Dropdown -->
                                                        <ComboBox 
                                                            Grid.Column="0"
                                                            Margin="0,0,12,0"
                                                            FontSize="14"
                                                            SelectedItem="{Binding AttributeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            ItemsSource="{Binding DataContext.AttributeTypes, RelativeSource={RelativeSource AncestorType=Page}}" />
                                                        
                                                        <!-- Value Input mit manueller Eingabe und Pfeilen -->
                                                        <Grid Grid.Column="1" Margin="0,0,8,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Editierbare Textbox -->
                                                            <TextBox 
                                                                Name="ValueTextBox"
                                                                Grid.Column="0"
                                                                HorizontalContentAlignment="Right"
                                                                VerticalContentAlignment="Center"
                                                                Padding="8,5"
                                                                FontSize="14"
                                                                Text="{Binding FormattedValue, Mode=OneWay}"
                                                                TextChanged="TextBox_TextChanged"
                                                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                                BorderThickness="1">
                                                                <TextBox.InputBindings>
                                                                    <KeyBinding Key="Return" 
                                                                              Command="{Binding DataContext.UpdateValueCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                              CommandParameter="{Binding}"/>
                                                                </TextBox.InputBindings>
                                                            </TextBox>
                                                            
                                                            <!-- Spinner-Knöpfe -->
                                                            <StackPanel Grid.Column="1" Orientation="Vertical" Width="24" Margin="2,0,0,0">
                                                                <Button 
                                                                    Content="▲" 
                                                                    Height="16" 
                                                                    Padding="0" 
                                                                    Margin="0,0,0,1"
                                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                                    BorderThickness="1"
                                                                    Command="{Binding DataContext.IncrementValueCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                    CommandParameter="{Binding}"/>
                                                                <Button 
                                                                    Content="▼" 
                                                                    Height="16" 
                                                                    Padding="0" 
                                                                    Margin="0,1,0,0"
                                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                                    BorderThickness="1"
                                                                    Command="{Binding DataContext.DecrementValueCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                    CommandParameter="{Binding}"/>
                                                            </StackPanel>
                                                        </Grid>
                                                        
                                                        <!-- Delete Attribute Button -->
                                                        <Button 
                                                            Grid.Column="2"
                                                            Padding="4"
                                                            Visibility="{Binding CanDelete, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.RemoveAttributeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}">
                                                            <TextBlock Text="❌" FontSize="12" />
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Add Attribute Button -->
                                        <Button 
                                            Grid.Row="2" 
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Left"
                                            Command="{Binding DataContext.AddAttributeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="➕" FontSize="12" VerticalAlignment="Center" />
                                                <TextBlock Text="Add Attribute" Margin="4,0,0,0" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page> 
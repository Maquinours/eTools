<Page
    x:Class="eTools_Ultimate.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:eTools_Ultimate.Helpers"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <!-- Scroll-Funktion -->
    <ScrollViewer
      Margin="0,1,0,-1"
      VerticalScrollBarVisibility="Auto"
      HorizontalScrollBarVisibility="Disabled">

        <StackPanel Margin="20" HorizontalAlignment="Stretch">

            <!-- TabControl mit den drei Hauptkategorien -->
            <TabControl>
                <!-- Resources Tab -->
                <TabItem Header="Resource Path" HorizontalAlignment="Center">

                    <StackPanel RenderTransformOrigin="0.5,0.5">
                        <!-- Grid mit 2x4 Layout für die Einstellungen -->
                        <ui:TextBlock TextWrapping="Wrap" Text="General" FontWeight="Bold" Margin="0,20,0,0" FontSize="16"/>
                        <!-- Grid mit 2x4 Layout für die Einstellungen -->
                        <Grid Margin="0,10,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Zeile 0, Spalte 0: Resources folder -->
                            <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Resources folder" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" Text="./"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectResourcesFolderCommand}"/>
                            </Grid>

                            <!-- Zeile 0, Spalte 1: Prop file -->
                            <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Spec_Item file" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" TextChanged="TextBox_TextChanged_1" Text="spec_Item.txt"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectPropFileCommand}"/>
                            </Grid>

                            <!-- Zeile 1, Spalte 0: Text file -->
                            <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Icon folder" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" Text="./Item\"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectIconsFolderCommand}"/>
                            </Grid>

                            <!-- Zeile 1, Spalte 1: Icons folder -->
                            <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropItem file" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" Text="propItem.txt.txt"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectTextFileCommand}"/>
                            </Grid>

                            <!-- Zeile 2, Spalte 0: Texture folder -->
                            <Grid Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Texture folder" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" Text="./Model\Texture\"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectTexturesFolderCommand}"/>
                            </Grid>

                            <!-- Zeile 2, Spalte 1: Sounds config file -->
                            <Grid Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Sounds config file" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" Text="./Client\sound.inc"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectSoundsConfigCommand}"/>
                            </Grid>

                            <!-- Zeile 3, Spalte 0: Sounds folder -->
                            <Grid Grid.Row="3" Grid.Column="0" Margin="0,0,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Sounds folder" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Margin="0,0,8,0" Text="./Sound\"/>
                                <Button Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectSoundsFolderCommand}"/>
                            </Grid>

                            <!-- Zeile 3, Spalte 1: Version -->
                            <Grid Grid.Row="3" Grid.Column="1" Margin="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Version" Margin="0,0,8,0"/>
                                <ComboBox Grid.Column="1" 
                                         SelectedItem="{Binding Version, Mode=TwoWay}" 
                                         HorizontalAlignment="Left" 
                                         Width="100" SelectedIndex="8">
                                    <ComboBoxItem Content="11"/>
                                    <ComboBoxItem Content="12"/>
                                    <ComboBoxItem Content="13"/>
                                    <ComboBoxItem Content="14"/>
                                    <ComboBoxItem Content="15"/>
                                    <ComboBoxItem Content="16"/>
                                    <ComboBoxItem Content="17"/>
                                    <ComboBoxItem Content="18"/>
                                    <ComboBoxItem Content="19"/>
                                    <ComboBoxItem Content="20"/>
                                    <ComboBoxItem Content="21"/>
                                    <ComboBoxItem Content="22"/>
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <!-- Separator before Mover -->
                        <Separator Margin="0,10,0,5"/>

                        <!-- Mover Section -->
                        <ui:TextBlock Text="Mover" FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>

                        <Grid Margin="0,10,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- PropMover file -->
                            <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropMover file" Margin="0,0,8,0"/>
                                <TextBox    Grid.Column="1" Margin="0,0,8,0" TextChanged="TextBox_TextChanged" Text="propMover.txt"/>
                                <Button     Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectPropMoverFileCommand}"/>
                            </Grid>

                            <!-- PropMover Text file -->
                            <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropMover.txt file" Margin="0,0,8,0"/>
                                <TextBox    Grid.Column="1" Margin="0,0,8,0" Text="propMover.txt.txt"/>
                                <Button     Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectPropMoverTextFileCommand}"/>
                            </Grid>

                            <!-- PropMoverEx file -->
                            <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropMoverEx file" Margin="0,0,8,0"/>
                                <TextBox    Grid.Column="1" Margin="0,0,8,0" IsHitTestVisible="False" Text="propMoverEx"/>
                                <Button     Grid.Column="2" Width="60" Content="Select" Command="{Binding SelectPropMoverExFileCommand}"/>
                            </Grid>

                            <!-- Checkboxes für PropMoverEx -->
                            <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="64 Bit" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <CheckBox Grid.Column="1" Content="HP" VerticalAlignment="Center" Margin="64,0,10,0"/>
                                <CheckBox Grid.Column="2" Content="ATK" VerticalAlignment="Center" Margin="0,0,0,0"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </TabItem>

                <!-- Personalization Tab -->
                <TabItem Header="Personalization">
                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Margin="0,30,0,12" Text="Theme" />
                        <RadioButton Margin="0,12,0,0" Content="Light" GroupName="themeSelect" />
                        <RadioButton Margin="0,8,0,0" Content="Dark"  GroupName="themeSelect" />
                    </StackPanel>
                </TabItem>

                <!-- About Tab -->
                <TabItem Header="About">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Margin="0,0,0,12" TextWrapping="Wrap">
                                eTool Ultimate is a powerful editor designed for editing Flyff resource files. 
                                Our tool simplifies the editing process for developers.
                            </TextBlock>
                            <TextBlock Margin="0,0,0,6" FontWeight="Bold">Key Features</TextBlock>
                            <TextBlock Margin="12,0,0,6" TextWrapping="Wrap">
                                <Run Text="• Edit .txt, .h, and .inc files with structured interfaces" />
                                <LineBreak />
                                <Run Text="• Advanced categorization by item types" />
                                <LineBreak />
                                <Run Text="• Light and Dark Theme" />
                            </TextBlock>

                            <TextBlock Margin="0,12,0,6" FontWeight="Bold">System Requirements</TextBlock>
                            <TextBlock Margin="12,0,0,6" TextWrapping="Wrap">
                                <Run Text="• Operating System: Windows 10/11" />
                                <LineBreak />
                                <Run Text="• Memory: 4GB RAM minimum, 8GB recommended" />
                                <LineBreak />
                                <Run Text="• Disk Space: 200MB available space" />
                                <LineBreak />
                                <Run Text="• Internet Connection: Required for updates and cloud features" />
                            </TextBlock>

                            <TextBlock Margin="0,20,0,0" TextWrapping="Wrap">© 2025 eTool Ultimate. All rights reserved.</TextBlock>
                            <TextBlock Margin="0,2,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>


            </TabControl>

            <!-- Buttons -->
            <StackPanel
          Orientation="Horizontal"
          HorizontalAlignment="center"
          Margin="0,24,0,0">
                <Button Content="Apply"  Width="80" Command="{Binding ApplySettingsCommand}" Margin="0,0,8,0" />
                <Button Content="Cancel" Width="80" Command="{Binding CancelSettingsCommand}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

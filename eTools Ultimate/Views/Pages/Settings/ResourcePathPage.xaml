<Page
    x:Class="eTools_Ultimate.Views.Pages.ResourcePathPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="ResourcePath"
    d:DataContext="{d:DesignInstance vm:ResourcePathViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="775.187"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <!-- Einzelnes Root-Element -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Tooltip für Haupteinstellungen -->
            <ui:CardControl Margin="0,10,0,10">
                <ui:CardControl.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Info20" Margin="0,0,8,0" OpacityMask="#FF0948DE"/>
                        <TextBlock TextWrapping="Wrap" Text="Set the path for resource files in a typical Flyff setup."/>
                    </StackPanel>
                </ui:CardControl.Header>
            </ui:CardControl>
            
            <!-- Grid mit 2x4 Layout für die Haupteinstellungen -->
            <Grid Margin="0,10,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Zeile 0, Spalte 0: Resource folder -->
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Resource folder" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" Text="{Binding Settings.ResourcesFolderPath, Mode=TwoWay}" Margin="0,0,8,0"/>
                    <Button Grid.Column="2" Width="60" Command="{Binding SelectResourcesFolderCommand}" HorizontalAlignment="Center" Height="35">
                        <ui:SymbolIcon Symbol="FolderOpen20"/>
                    </Button>
                </Grid>

                <!-- Zeile 0, Spalte 1: Client folder -->
                <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Client folder" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" Text="{Binding Settings.IconsFolderPath, Mode=TwoWay}" Margin="0,0,8,0"/>
                    <Button Grid.Column="2" Width="60" Command="{Binding SelectIconsFolderCommand}" HorizontalAlignment="Center" Height="35">
                        <ui:SymbolIcon Symbol="FolderOpen20"/>
                    </Button>
                </Grid>

                <!-- Zeile 1, Spalte 0: Version -->
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Version" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding PossibleResourceVersions}"
                              SelectedValue="{Binding Settings.ResourcesVersion, Mode=TwoWay}" 
                              HorizontalAlignment="Left" 
                              Width="100"/>
                </Grid>
            </Grid>

            <!-- Separator before Custom Section -->
            <Separator Margin="0,10,0,5"/>

            <!-- Advanced settingsn Button -->
            <Grid Margin="0,5,0,5">
                <Button Content="Advanced settings" 
                        Command="{Binding ToggleAdvancedSettingsCommand}"
                        HorizontalAlignment="Left"
                        Padding="15,5">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdvancedSettingsVisible}" Value="True">
                                    <Setter Property="Background" Value="#FF0078D7"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Advanced Settings Sections -->
            <StackPanel Visibility="{Binding IsAdvancedSettingsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <!-- Tooltip für erweiterte Einstellungen -->
                <ui:CardControl Margin="0,10,0,10">
                    <ui:CardControl.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Info20" Margin="0,0,8,0"/>
                            <TextBlock TextWrapping="Wrap" Text="Set the path when using a custom structure."/>
                        </StackPanel>
                    </ui:CardControl.Header>
                </ui:CardControl>
                
                <!-- Custom Section -->
                <ui:TextBlock Text="Custom" FontSize="14" Margin="0,10,0,0" FontWeight="Bold"/>
                
                <!-- Custom - Basic Files -->
                <Grid Margin="0,10,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Zeile 0, Spalte 0: Texture folder -->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Texture folder" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.TexturesFolderPath, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectTexturesFolderCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- Zeile 0, Spalte 1: Sounds config file -->
                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Sounds config file" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.SoundsConfigFilePath, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectSoundsConfigCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- Zeile 1, Spalte 0: Sounds folder -->
                    <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Sounds folder" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.SoundsFolderPath, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectSoundsFolderCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>
                </Grid>
                
                <!-- Item Section -->
                <ui:TextBlock Text="Item" FontSize="14" Margin="0,10,0,0" FontWeight="Bold"/>

                <Grid Margin="0,10,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icons folder-->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Icons folder" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.ItemIconsPath, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectItemIconsCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- Item folder-->
                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Item folder" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.ItemPath, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectItemPathCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- Prop file -->
                    <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Spec_Item file" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.PropItemFilePath, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectPropFileCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- Text file -->
                    <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropItem.txt file" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Settings.PropItemTxtFilePath, Mode=TwoWay}" Margin="0,0,8,0" Cursor="IBeam"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectTextFileCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>
                </Grid>

                <!-- Mover Section -->
                <ui:TextBlock Text="Mover" FontSize="14" Margin="0,10,0,0" FontWeight="Bold"/>

                <Grid Margin="0,10,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- PropMover file -->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropMover file" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Margin="0,0,8,0" Text="{Binding Settings.PropMoverFilePath, Mode=TwoWay}"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectPropMoverFileCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- PropMover Text file -->
                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropMover.txt file" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Margin="0,0,8,0" Text="{Binding Settings.PropMoverTxtFilePath, Mode=TwoWay}"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectPropMoverTextFileCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- PropMoverEx file -->
                    <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PropMoverEx file" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Margin="0,0,8,0" IsHitTestVisible="False" Text="{Binding Settings.PropMoverExFilePath, Mode=TwoWay}"/>
                        <Button Grid.Column="2" Width="60" Command="{Binding SelectPropMoverExFileCommand}" HorizontalAlignment="Center" Height="35">
                            <ui:SymbolIcon Symbol="FolderOpen20"/>
                        </Button>
                    </Grid>

                    <!-- Checkboxes für PropMoverEx -->
                    <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="64 Bit" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <CheckBox Grid.Column="1" Content="HP" IsChecked="{Binding Settings.Mover64BitHp, Mode=TwoWay}" VerticalAlignment="Center" Margin="64,0,10,0"/>
                        <CheckBox Grid.Column="2" Content="ATK" IsChecked="{Binding Settings.Mover64BitAtk, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page> 
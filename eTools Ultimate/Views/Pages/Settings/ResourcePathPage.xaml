<Page
    x:Class="eTools_Ultimate.Views.Pages.ResourcePathPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="ResourcePath"
    d:DataContext="{d:DesignInstance Type=vm:ResourcePathViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <ScrollViewer
            x:Name="MainScrollViewer"
            Padding="0,0,18,0"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="45,8,45,20">
                <!--  Info for main settings  -->
                <ui:InfoBar Title="Settings" Message="Main Settings" />

                <!--  Grid mit 2x4 Layout für die Haupteinstellungen  -->
                <Grid Margin="0,10,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Zeile 0, Spalte 0: Resource folder  -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Text="Resource folder" />
                        <TextBox
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            Text="{Binding Settings.ResourcesFolderPath, Mode=TwoWay}" />
                        <Button
                            Grid.Column="2"
                            Width="60"
                            Height="35"
                            HorizontalAlignment="Center"
                            Command="{Binding SelectResourcesFolderCommand}">
                            <ui:SymbolIcon Symbol="FolderOpen20" />
                        </Button>
                    </Grid>

                    <!--  Zeile 0, Spalte 1: Client folder  -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Text="Client folder" />
                        <TextBox
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            Text="{Binding Settings.ClientFolderPath, Mode=TwoWay}" />
                        <Button
                            Grid.Column="2"
                            Width="60"
                            Height="35"
                            HorizontalAlignment="Center"
                            Command="{Binding SelectClientFolderCommand}">
                            <ui:SymbolIcon Symbol="FolderOpen20" />
                        </Button>
                    </Grid>

                    <!--  Zeile 1, Spalte 0: Version  -->
                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Text="Version" />
                        <ComboBox
                            Grid.Column="1"
                            Width="100"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding PossibleResourceVersions}"
                            SelectedValue="{Binding Settings.ResourcesVersion, Mode=TwoWay}" />
                    </Grid>
                </Grid>

                <!--  Separator before Custom Section  -->
                <Separator Margin="0,10,0,5" />

                <!--  Advanced settingsn Button  -->
                <Grid Margin="0,5,0,5">
                    <Button
                        Padding="15,5"
                        HorizontalAlignment="Left"
                        Command="{Binding ToggleAdvancedSettingsCommand}"
                        Content="Advanced settings">
                        <Button.Style>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAdvancedSettingsVisible}" Value="True">
                                        <Setter Property="Background" Value="#FF0078D7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!--  Advanced Settings Sections  -->
                <StackPanel Visibility="{Binding IsAdvancedSettingsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!--  Info for advanced settings  -->
                    <ui:InfoBar Title="Settings" Message="Advanced Settings" />

                    <!--  Custom Section  -->
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Custom" />

                    <!--  Custom - Basic Files  -->
                    <Grid Margin="0,10,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Zeile 0, Spalte 0: Texture folder  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Texture folder" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="TexturesFolderPathTextBox" Text="{Binding Settings.TexturesFolderPath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultTexturesFolderPath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TexturesFolderPathTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectTexturesFolderCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Zeile 0, Spalte 1: Icons folder  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Icons folder" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="IconsFolderPathTextbox" Text="{Binding Settings.IconsFolderPath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultIconsFolderPath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=IconsFolderPathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectItemIconsCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Zeile 1, Spalte 0: Sounds folder  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Sounds folder" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="SoundsFolderPathTextbox" Text="{Binding Settings.SoundsFolderPath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultSoundsFolderPath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SoundsFolderPathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectSoundsFolderCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Zeile 1, Spalte 1: Sounds config file  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Sounds config file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="SoundsConfigFilePathTextBox" Text="{Binding Settings.SoundsConfigFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultSoundsConfigFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SoundsConfigFilePathTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectSoundsConfigCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>
                    </Grid>

                    <!--  Item Section  -->
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Item" />

                    <Grid Margin="0,10,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Prop file (Spec_Item file)  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Spec_Item file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="PropItemFilePathTextbox" Text="{Binding Settings.PropItemFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropItemFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropItemFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectPropFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Text file (PropItem.txt file)  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="PropItem.txt file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox
                                    x:Name="PropItemTxtFilePathTextbox"
                                    Cursor="IBeam"
                                    Text="{Binding Settings.PropItemTxtFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropItemTxtFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropItemTxtFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectTextFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Item Item folder  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Item folder" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="ItemIconsFolderPathTextbox" Text="{Binding Settings.ItemIconsFolderPath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultItemIconsFolderPath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=ItemIconsFolderPathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectItemIconsFolderCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>
                    </Grid>

                    <!--  Mover Section  -->
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Mover" />

                    <Grid Margin="0,10,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  PropMover file  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="PropMover file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="PropMoverFilePathTextbox" Text="{Binding Settings.PropMoverFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropMoverFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropMoverFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectPropMoverFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  PropMover Text file  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="PropMover.txt file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="PropMoverTxtFilePathTextbox" Text="{Binding Settings.PropMoverTxtFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropMoverTxtFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropMoverTxtFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectPropMoverTextFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  PropMoverEx file  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="PropMoverEx file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox
                                    x:Name="PropMoverExFilePathTextbox"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.PropMoverExFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropMoverExFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropMoverExFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectPropMoverExFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Checkboxes für PropMoverEx  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Text="64 Bit" />
                            <CheckBox
                                Grid.Column="1"
                                Width="55"
                                Margin="75,0,0,0"
                                Content="HP"
                                IsChecked="{Binding Settings.Mover64BitHp, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="2"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                Content="ATK"
                                IsChecked="{Binding Settings.Mover64BitAtk, Mode=TwoWay}" />
                        </Grid>
                    </Grid>

                    <!--  Skill Section  -->
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Skill" />

                    <Grid Margin="0,10,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  PropSkill file  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="PropSkill file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="PropSkillFilePathTextbox" Text="{Binding Settings.PropSkillFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropSkillFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropSkillFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectPropSkillFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  PropSkill.txt file  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="PropSkill.txt file" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="PropSkillTxtFilePathTextbox" Text="{Binding Settings.PropSkillTxtFilePath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultPropSkillTxtFilePath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=PropSkillTxtFilePathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectPropSkillTextFileCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>

                        <!--  Skill Icon folder  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Icon folder" />
                            <Grid Grid.Column="1" Margin="0,0,8,0">
                                <TextBox x:Name="SkillIconsFolderPathTextbox" Text="{Binding Settings.SkillIconsFolderPath, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="DarkGray"
                                    IsHitTestVisible="False"
                                    Text="{Binding Settings.DefaultSkillIconsFolderPath, Mode=OneWay}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SkillIconsFolderPathTextbox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button
                                Grid.Column="2"
                                Width="60"
                                Height="35"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectSkillIconsFolderCommand}">
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </Button>
                        </Grid>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 
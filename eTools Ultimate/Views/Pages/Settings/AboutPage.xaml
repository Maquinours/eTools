<Page
    x:Class="eTools_Ultimate.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="AboutPage"
    d:DataContext="{d:DesignInstance vm:AboutViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ApplicationForegroundBrush" Color="#000000"/>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- App Logo und Titel -->
                <StackPanel HorizontalAlignment="Center" Margin="0,20,0,40">
                    <Image 
                        Source="/Views/Pages/Settings/Logo.png" 
                        Width="400" 
                        Height="120" 
                        />
                    <TextBlock 
                        Text="{Binding AppVersion}" 
                        FontSize="14" 
                        Foreground="Gray" 
                        HorizontalAlignment="Center"
                        Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Beschreibung -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock 
                            Text="About eTools Ultimate" 
                            FontWeight="SemiBold" 
                            FontSize="16" 
                            Margin="0,0,0,10"/>

                        <TextBlock 
                            Text="{Binding AppDescription}" 
                            TextWrapping="Wrap" 
                            Margin="0,0,0,15"/>

                        <TextBlock 
                            Text="Our tool simplifies the editing process for developers." 
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </ui:Card>

                <!-- Funktionen -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock 
                            Text="Main Features" 
                            FontWeight="SemiBold" 
                            FontSize="16" 
                            Margin="0,0,0,10"/>

                        <StackPanel Margin="10,0,0,0">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon 
                                    Symbol="Edit24" 
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"/>

                                <TextBlock 
                                    Grid.Column="1" 
                                    Text="Editing of .txt, .h and .inc files with structured interfaces" 
                                    TextWrapping="Wrap"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon 
                                    Symbol="List24" 
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"/>

                                <TextBlock 
                                    Grid.Column="1" 
                                    Text="Advanced categorization by element types" 
                                    TextWrapping="Wrap"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon 
                                    Symbol="Desktop24" 
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"/>

                                <TextBlock 
                                    Grid.Column="1" 
                                    Text="Optimized for performance and user-friendliness" 
                                    TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Team -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock 
                            Text="Development Team" 
                            FontWeight="SemiBold" 
                            FontSize="16" 
                            Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Erster Entwickler -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,10,0">
                                <Grid Width="150" Height="150" Margin="0,0,0,10">
                                    <Ellipse 
                                        Fill="Gray"
                                        Stroke="Gray"
                                        StrokeThickness="2"/>
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush 
                                                ImageSource="/Views/Pages/Settings/Maqui.jpg"
                                                Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <TextBlock 
                                    Text="Maqui" 
                                    FontWeight="SemiBold" 
                                    HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Zweiter Entwickler -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0">
                                <Grid Width="150" Height="150" Margin="0,0,0,10">
                                    <Ellipse 
                                        Fill="Gray"
                                        Stroke="Gray"
                                        StrokeThickness="2"/>
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush 
                                                ImageSource="/Views/Pages/Settings/Kiyo.jpg"
                                                Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <TextBlock 
                                    Text="Kiyo" 
                                    FontWeight="SemiBold" 
                                    HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Systemanforderungen -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock 
                            Text="System Requirements" 
                            FontWeight="SemiBold" 
                            FontSize="16" 
                            Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Operating System:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Windows 10/11"/>
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Memory:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="4 GB RAM minimum, 8 GB recommended"/>
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Disk Space:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="200 MB available space"/>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- AktionsschaltflÃ¤chen -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
                    <Button 
                        Content="Visit Website" 
                        Margin="0,0,15,0"
                        Command="{Binding OpenWebsiteCommand}"/>

                    <Button 
                        Content="Check for Updates" 
                        Command="{Binding CheckForUpdatesCommand}"/>
                </StackPanel>

                <!-- Copyright -->
                <TextBlock 
                    Text="{Binding Copyright}" 
                    HorizontalAlignment="Center" 
                    Margin="0,25,0,0" 
                    Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 
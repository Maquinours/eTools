<Page
    x:Class="eTools_Ultimate.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="AboutPage"
    d:DataContext="{d:DesignInstance vm:AboutViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="800"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ApplicationForegroundBrush" Color="#000000" />
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly"
                      IsManipulationEnabled="True">
            <StackPanel Margin="40">
                <!--  App Logo und Titel  -->
                <StackPanel Margin="0,20,0,40" HorizontalAlignment="Center">
                    <Image
                        Width="500"
                        Height="200"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/Images/Logo.png" />
                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="Gray"
                        Text="{Binding AppVersion}" />
                </StackPanel>

                <!--  Beschreibung  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Über eTools Ultimate" />

                        <TextBlock
                            Margin="0,0,0,15"
                            Text="{Binding AppDescription}"
                            TextWrapping="Wrap" />

                        <TextBlock Text="Unser Tool vereinfacht den Bearbeitungsprozess für Entwickler." TextWrapping="Wrap" />
                    </StackPanel>
                </ui:Card>

                <!--  Funktionen  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Hauptfunktionen" />

                        <StackPanel Margin="10,0,0,0">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"
                                    Symbol="Edit24" />

                                <TextBlock
                                    Grid.Column="1"
                                    Text="Bearbeitung von .txt, .h und .inc Dateien mit strukturierten Benutzeroberflächen"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"
                                    Symbol="List24" />

                                <TextBlock
                                    Grid.Column="1"
                                    Text="Erweiterte Kategorisierung nach Elementtypen"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"
                                    Symbol="Desktop24" />

                                <TextBlock
                                    Grid.Column="1"
                                    Text="Optimiert für Leistung und Benutzerfreundlichkeit"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!--  Team  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Entwicklungsteam" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Erster Entwickler  -->
                            <StackPanel
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Center">
                                <Grid
                                    Width="150"
                                    Height="150"
                                    Margin="0,0,0,10">
                                    <Ellipse
                                        Fill="Gray"
                                        Stroke="Gray"
                                        StrokeThickness="2" />
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush
                                                ImageSource="pack://application:,,,/Assets/Images/Maqui.jpg"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="Maqui" />
                            </StackPanel>

                            <!--  Zweiter Entwickler  -->
                            <StackPanel
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center">
                                <Grid
                                    Width="150"
                                    Height="150"
                                    Margin="0,0,0,10">
                                    <Ellipse
                                        Fill="Gray"
                                        Stroke="Gray"
                                        StrokeThickness="2" />
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush
                                                ImageSource="pack://application:,,,/Assets/Images/Kiyo.jpg"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="Kiyo" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!--  System Requirements  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Systemanforderungen" />

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontWeight="SemiBold" Text="Betriebssystem:" />
                            <TextBlock Grid.Column="1" Text="Windows 10/11" />
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontWeight="SemiBold" Text="Arbeitsspeicher:" />
                            <TextBlock Grid.Column="1" Text="4 GB RAM mindestens, 8 GB empfohlen" />
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontWeight="SemiBold" Text="Festplattenspeicher:" />
                            <TextBlock Grid.Column="1" Text="200 MB verfügbarer Speicherplatz" />
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!--  Aktionsschaltflächen  -->
                <StackPanel
                    Margin="0,15,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,15,0"
                        Command="{Binding OpenWebsiteCommand}"
                        Content="Website besuchen" />

                    <Button Command="{Binding CheckForUpdatesCommand}" Content="Nach Updates suchen" />
                </StackPanel>

                <!--  Copyright  -->
                <TextBlock
                    Margin="0,25,0,0"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="{Binding Copyright}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 
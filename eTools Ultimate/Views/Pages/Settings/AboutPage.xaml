<Page
    x:Class="eTools_Ultimate.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="AboutPage"
    d:DataContext="{d:DesignInstance vm:AboutViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="800"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ApplicationForegroundBrush" Color="#000000" />
    </Page.Resources>

    <Grid>
        <ScrollViewer
            CanContentScroll="False"
            HorizontalScrollBarVisibility="Disabled"
            IsManipulationEnabled="True"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!--  App Logo und Titel  -->
                <StackPanel Margin="0,20,0,40" HorizontalAlignment="Center">
                    <Image
                        Width="500"
                        Height="200"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/Images/Logo.png" />
                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="Gray"
                        Text="{Binding AppVersion}" />
                </StackPanel>

                <!--  Beschreibung  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{i18n:StringLocalizer 'About eTools Ultimate'}" />

                        <TextBlock
                            Margin="0,0,0,15"
                            Text="{Binding AppDescription}"
                            TextWrapping="Wrap" />

                        <TextBlock Text="{i18n:StringLocalizer 'Our tool simplifies the editing process for developers.'}" TextWrapping="Wrap" />
                    </StackPanel>
                </ui:Card>

                <!--  Funktionen  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{i18n:StringLocalizer 'Main Features'}" />

                        <StackPanel Margin="10,0,0,0">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"
                                    Symbol="Edit24" />

                                <TextBlock
                                    Grid.Column="1"
                                    Text="{i18n:StringLocalizer 'Editing of .txt, .h and .inc files with structured interfaces'}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"
                                    Symbol="List24" />

                                <TextBlock
                                    Grid.Column="1"
                                    Text="{i18n:StringLocalizer 'Advanced categorization by element types'}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:SymbolIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="CornflowerBlue"
                                    Symbol="Desktop24" />

                                <TextBlock
                                    Grid.Column="1"
                                    Text="{i18n:StringLocalizer 'Optimized for performance and user-friendliness'}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!--  Team  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{i18n:StringLocalizer 'Development Team'}" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Erster Entwickler  -->
                            <StackPanel
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Center">
                                <Grid
                                    Width="150"
                                    Height="150"
                                    Margin="0,0,0,10">
                                    <Ellipse
                                        Fill="Gray"
                                        Stroke="Gray"
                                        StrokeThickness="2" />
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush
                                                ImageSource="pack://application:,,,/Assets/Images/Maqui.jpg"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="Maqui" />
                            </StackPanel>

                            <!--  Zweiter Entwickler  -->
                            <StackPanel
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center">
                                <Grid
                                    Width="150"
                                    Height="150"
                                    Margin="0,0,0,10">
                                    <Ellipse
                                        Fill="Gray"
                                        Stroke="Gray"
                                        StrokeThickness="2" />
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <ImageBrush
                                                ImageSource="pack://application:,,,/Assets/Images/Kiyo.jpg"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="Kiyo" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!--  System Requirements  -->
                <ui:Card Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{i18n:StringLocalizer 'System Requirements'}" />

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontWeight="SemiBold" Text="{i18n:StringLocalizer 'Operating System:'}" />
                            <TextBlock Grid.Column="1" Text="{i18n:StringLocalizer 'Windows 10/11'}" />
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontWeight="SemiBold" Text="{i18n:StringLocalizer 'Memory:'}" />
                            <TextBlock Grid.Column="1" Text="{i18n:StringLocalizer '4 GB RAM minimum, 8 GB recommended'}" />
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontWeight="SemiBold" Text="{i18n:StringLocalizer 'Disk Space:'}" />
                            <TextBlock Grid.Column="1" Text="{i18n:StringLocalizer '200 MB available space'}" />
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!--  AktionsschaltflÃ¤chen  -->
                <StackPanel
                    Margin="0,15,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,15,0"
                        Command="{Binding OpenWebsiteCommand}"
                        Content="Visit Website" />

                    <Button Command="{Binding CheckForUpdatesCommand}" Content="Check for Updates" />
                </StackPanel>

                <!--  Copyright  -->
                <TextBlock
                    Margin="0,25,0,0"
                    HorizontalAlignment="Center"
                    Foreground="Gray"
                    Text="{Binding Copyright}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 
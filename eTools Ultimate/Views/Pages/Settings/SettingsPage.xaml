<Page
    x:Class="eTools_Ultimate.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:eTools_Ultimate.Helpers"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance vm:SettingsViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource ApplicationForegroundBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  WPF UI Design System Resources  -->
        <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#FFFFFF" />
        <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#212121" />
        <SolidColorBrush x:Key="ApplicationForegroundBrush" Color="#212121" />
    </Page.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Height="300"
                CornerRadius="8">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#2B5797" />
                        <GradientStop Offset="1" Color="#0078D7" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border CornerRadius="8">
                    <Border.Background>
                        <ImageBrush
                            ImageSource="pack://application:,,,/Assets/Images/SettingsPageBanner.png"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Stretch="UniformToFill" />
                    </Border.Background>
                    <Grid>
                        <StackPanel
                            Margin="48,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <ui:TextBlock
                                FontTypography="Title"
                                FontWeight="Bold"
                                Foreground="#FFFFFF"
                                Text="{i18n:StringLocalizer 'Settings'}" />
                        </StackPanel>
                        <ui:TextBlock
                            Margin="12"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            FontTypography="Caption"
                            Foreground="#57FFFFFF"
                            Text="{i18n:StringLocalizer 'Created by eTools Ultimate'}" />
                    </Grid>
                </Border>
            </Border>

            <Grid Grid.Row="1" Margin="24,24,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    Command="{Binding NavigateToResourcePathCommand, Mode=OneWay}"
                    IsChevronVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Width="60"
                            Height="Auto"
                            Margin="24,0,0,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/Assets/Icons/FolderIcon.png" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="24"
                            VerticalAlignment="Center">
                            <ui:TextBlock
                                Margin="0"
                                FontTypography="BodyStrong"
                                Text="{i18n:StringLocalizer 'Resource Path'}"
                                TextWrapping="WrapWithOverflow" />
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="Gray"
                                Text="{i18n:StringLocalizer 'Loading all Paths.'}"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Grid>
                </ui:CardAction>

                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="4,0,4,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    Command="{Binding NavigateToPersonalizationCommand, Mode=OneWay}"
                    IsChevronVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Width="60"
                            Height="Auto"
                            Margin="24,0,0,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/Assets/Icons/PersonalizationIcon.png" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="24"
                            VerticalAlignment="Center">
                            <ui:TextBlock
                                Margin="0"
                                FontTypography="BodyStrong"
                                Text="{i18n:StringLocalizer 'Personalization'}"
                                TextWrapping="WrapWithOverflow" />
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="Gray"
                                Text="{i18n:StringLocalizer 'Change Design and other parts'}"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Grid>
                </ui:CardAction>

                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="4,0,4,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    Command="{Binding NavigateToAboutCommand, Mode=OneWay}"
                    IsChevronVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Width="60"
                            Height="Auto"
                            Margin="24,0,0,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/Assets/Icons/AboutIcon.png" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="24"
                            VerticalAlignment="Center">
                            <ui:TextBlock
                                Margin="0"
                                FontTypography="BodyStrong"
                                Text="{i18n:StringLocalizer 'About'}"
                                TextWrapping="WrapWithOverflow" />
                            <ui:TextBlock
                                Appearance="Secondary"
                                Foreground="Gray"
                                Text="{i18n:StringLocalizer 'Learn more about eTools Ultimate'}"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </Grid>
                </ui:CardAction>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

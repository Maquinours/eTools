<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="eTools_Ultimate.Views.Pages.PersonalizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appearance="clr-namespace:Wpf.Ui.Appearance;assembly=Wpf.Ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="PersonalizationPage"
    d:DataContext="{d:DesignInstance vm:PersonalizationViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">

            <!--  Theme Selection  -->
            <ui:CardControl Margin="0,0,0,16" Icon="{ui:SymbolIcon Color24}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            FontTypography="Body"
                            Text="{i18n:StringLocalizer 'App theme'}" />
                        <ui:TextBlock Grid.Row="1" Text="{i18n:StringLocalizer 'Select which app theme to display'}" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox
                    MinWidth="200"
                    SelectedValue="{Binding CurrentApplicationTheme, Mode=TwoWay}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Content="{i18n:StringLocalizer 'Light'}" Tag="{x:Static appearance:ApplicationTheme.Light}" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'Dark'}" Tag="{x:Static appearance:ApplicationTheme.Dark}" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'High Contrast'}" Tag="{x:Static appearance:ApplicationTheme.HighContrast}" />
                </ComboBox>
            </ui:CardControl>

            <!--  Language Selection  -->
            <ui:CardControl Margin="0,0,0,16" Icon="{ui:SymbolIcon LocalLanguage24}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            FontTypography="Body"
                            Text="{i18n:StringLocalizer 'Application language'}" />
                        <ui:TextBlock Grid.Row="1" Text="{i18n:StringLocalizer 'Choose your preferred language'}" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox
                    MinWidth="200"
                    SelectedValue="{Binding AppConfigService.Language, Mode=TwoWay}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Content="{Binding DefaultCultureOptionLabel}" Tag="Default" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'English'}" Tag="en-EN" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'German'}" Tag="de-DE" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'French'}" Tag="fr-FR" />
                </ComboBox>
            </ui:CardControl>


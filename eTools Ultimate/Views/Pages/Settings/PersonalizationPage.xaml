<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="eTools_Ultimate.Views.Pages.PersonalizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:vm="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="PersonalizationPage"
    d:DataContext="{d:DesignInstance vm:PersonalizationViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">

            <!-- Theme Selection -->
            <ui:CardControl Margin="0,0,0,16" Icon="{ui:SymbolIcon Color24}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            FontTypography="Body"
                            Text="{i18n:StringLocalizer 'App theme'}" />
                        <ui:TextBlock Grid.Row="1" Text="{i18n:StringLocalizer 'Select which app theme to display'}" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox MinWidth="200" SelectionChanged="ComboBox_SelectionChanged">
                                            <ComboBoxItem Content="{i18n:StringLocalizer 'Light'}" IsSelected="{Binding IsLightTheme}" />
                        <ComboBoxItem Content="{i18n:StringLocalizer 'Dark'}" IsSelected="{Binding IsDarkTheme}" />
                </ComboBox>
            </ui:CardControl>

            <!-- Language Selection -->
            <ui:CardControl Margin="0,0,0,16" Icon="{ui:SymbolIcon LocalLanguage24}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            FontTypography="Body"
                            Text="{i18n:StringLocalizer 'Application language'}" />
                        <ui:TextBlock Grid.Row="1" Text="{i18n:StringLocalizer 'Choose your preferred language'}" />
                    </Grid>
                </ui:CardControl.Header>
                <ComboBox MinWidth="200">
                    <ComboBoxItem Content="{i18n:StringLocalizer 'English (Default)'}" IsSelected="True" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'German'}" />
                    <ComboBoxItem Content="{i18n:StringLocalizer 'French'}" />
                </ComboBox>
            </ui:CardControl>

            <!-- Auto-Save Interval Selection -->
            <ui:CardControl Margin="0,0,0,16" Icon="{ui:SymbolIcon Save24}">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ui:TextBlock
                            Grid.Row="0"
                            FontTypography="Body"
                            Text="{i18n:StringLocalizer 'Auto-save interval'}" />
                        <ui:TextBlock Grid.Row="1" Text="{i18n:StringLocalizer 'Set the time interval for automatic saving'}" />
                    </Grid>
                </ui:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <ComboBox
                        x:Name="AutoSaveCombo"
                        MinWidth="120"
                        Margin="0,0,8,0"
                        SelectedIndex="0"
                        SelectionChanged="AutoSaveCombo_SelectionChanged">
                        <ComboBoxItem Content="{i18n:StringLocalizer '5 minutes'}" />
                        <ComboBoxItem Content="{i18n:StringLocalizer '15 minutes'}" />
                        <ComboBoxItem Content="{i18n:StringLocalizer '30 minutes'}" />
                        <ComboBoxItem Content="{i18n:StringLocalizer 'Custom'}" />
                    </ComboBox>
                    <Grid x:Name="CustomTimeGrid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:NumberBox
                            x:Name="MinutesNumberBox"
                            Grid.Column="0"
                            MinWidth="100"
                            Minimum="0"
                            SpinButtonPlacementMode="Inline" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="{i18n:StringLocalizer 'min'}" />
                    </Grid>
                </StackPanel>
            </ui:CardControl>
        </StackPanel>
    </ScrollViewer>
</Page> 
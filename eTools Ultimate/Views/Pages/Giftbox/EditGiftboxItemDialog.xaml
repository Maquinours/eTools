<Window
    x:Class="eTools_Ultimate.Views.Pages.EditGiftboxItemDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    Title="{i18n:StringLocalizer 'Edit Item'}"
    Height="500"
    Width="500"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResize"
    ui:Design.Background="White"
    ui:Design.Foreground="Black"
    Background="White"
    Foreground="Black"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,15,0,10" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="0,8,0,4" />
        </Style>

        <Style x:Key="FormFieldStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,15,25" />
        </Style>

        <Style x:Key="InfoIconStyle" TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
        </Style>
    </Window.Resources>

                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                                <!-- Content Area -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Visible" Margin="20,20,0,0">
                    <StackPanel Margin="0,0,20,0">
                <!-- Item Information Section -->
                <TextBlock Text="{i18n:StringLocalizer 'Item Information'}" Style="{StaticResource SectionHeaderStyle}" />
                
                <!-- Item Icon and Name -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Border
                        Grid.Column="0"
                        Width="64"
                        Height="64"
                        Margin="0,0,15,0"
                        Background="Transparent"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="4">
                        <Image
                            Margin="4"
                            Source="{Binding Item.Icon}"
                            Stretch="Uniform" />
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{Binding Item.Name}" />
                        <TextBlock
                            FontSize="12"
                            Text="{Binding Item.Identifier}" />
                    </StackPanel>
                </Grid>

                <!-- Quantity and Probability -->
                <UniformGrid Columns="2">
                    <!-- Quantity -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="{i18n:StringLocalizer 'Quantity'}" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Quantity of the item" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            Grid.Row="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Prop.NNum}" />
                    </Grid>

                    <!-- Probability -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="{i18n:StringLocalizer 'Probability (%)'}" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Probability percentage" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            Grid.Row="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Prop.DwProbability}" />
                    </Grid>
                </UniformGrid>



                                        <!-- Preview Section -->
                        <TextBlock Text="{i18n:StringLocalizer 'Preview'}" Style="{StaticResource SectionHeaderStyle}" />
                        
                        <Border
                            Margin="0,0,20,15"
                            Background="LightGray"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15">
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{i18n:StringLocalizer 'Item Summary:'}" />
                        <TextBlock
                            Margin="0,5,0,0">
                            <Run Text="{i18n:StringLocalizer 'Quantity: '}" />
                            <Run Text="{Binding Prop.NNum}" />
                            <Run Text=" | Probability: " />
                            <Run Text="{Binding ProbabilityPercent}" />
                            <Run Text="%" />
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

                        <!-- Button Area -->
                <Border
                    Grid.Row="1"
                    Background="LightGray"
                    BorderBrush="Gray"
                    BorderThickness="0,1,0,0"
                    Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button
                    Margin="0,0,10,0"
                    Appearance="Secondary"
                    Content="Delete"
                    Click="DeleteButton_Click" />
                <ui:Button
                    Margin="0,0,10,0"
                    Appearance="Secondary"
                    Content="Cancel"
                    Click="CancelButton_Click" />
                <ui:Button
                    Appearance="Primary"
                    Content="Save"
                    Click="SaveButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>

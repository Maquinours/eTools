        <!-- DataTemplate for the Motions Dialog -->
        <DataTemplate x:Key="MotionsDialogTemplate">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left side with list -->
                <Border Grid.Row="0" Grid.Column="0"
                       BorderThickness="1"
                       BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                       Margin="0,0,10,0">
                    <ListView x:Name="MotionsListView" 
                             Style="{StaticResource AppListViewStyle}"
                             ItemsSource="{Binding MotionsList}"
                             SelectedItem="{Binding SelectedMotion, Mode=TwoWay}"
                             Height="200"
                             Width="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
                
                <!-- Right side with details -->
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <!-- Add Button -->
                    <ui:Button x:Name="AddMotionButton"
                             Content="Add"
                             Appearance="Secondary"
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,10"/>
                    
                    <!-- Generate Button -->
                    <ui:Button x:Name="GenerateMotionButton"
                             Content="Generate"
                             Appearance="Secondary"
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,20"/>
                    
                    <!-- Identifier -->
                    <TextBlock Text="Identifier:" Margin="0,0,0,5"/>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Identifier Row -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Label with info icon -->
                            <StackPanel Grid.Row="0" 
                                      Orientation="Horizontal"
                                      Margin="0,0,0,5">
                                <TextBlock Text="Identifier" 
                                         FontWeight="SemiBold" 
                                         FontSize="12"/>
                                <ui:SymbolIcon Symbol="Info20"
                                            Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Animation type"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            
                            <!-- Dropdown -->
                            <Border Grid.Row="1"
                                  Background="{DynamicResource ControlFillColorDefaultBrush}"
                                  BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                  BorderThickness="1"
                                  CornerRadius="4">
                                <ComboBox Style="{StaticResource AppComboBoxStyle}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        SelectedIndex="0">
                                    <ComboBoxItem Content="MTI_STAND"/>
                                    <ComboBoxItem Content="MTI_WALK"/>
                                    <ComboBoxItem Content="MTI_IDLE1"/>
                                    <ComboBoxItem Content="MTI_IDLE2"/>
                                    <ComboBoxItem Content="MTI_DMG1"/>
                                </ComboBox>
                            </Border>
                        </Grid>
                        
                        <!-- File Row -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Label with info icon -->
                            <StackPanel Grid.Row="0" 
                                      Orientation="Horizontal"
                                      Margin="0,0,0,5">
                                <TextBlock Text="File" 
                                         FontWeight="SemiBold" 
                                         FontSize="12"/>
                                <ui:SymbolIcon Symbol="Info20"
                                            Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Animation file"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            
                            <!-- File input with button -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                       Style="{StaticResource AppTextBoxStyle}"
                                       Text="{Binding SelectedItem.SzMotion, ElementName=MotionsListView}" Cursor="IBeam"/>
                                <ui:Button Grid.Column="1" 
                                         Content="..." 
                                         Width="30"
                                         Margin="5,0,0,0"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </StackPanel>
                
                <!-- Buttons at the bottom -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                          Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          Margin="0,15,0,0">
                    <ui:Button x:Name="OkButton"
                             Content="OK"
                             Appearance="Primary"
                             Margin="0,0,10,0"/>
                    <ui:Button x:Name="CancelButton"
                             Content="Cancel"
                             Appearance="Secondary"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Mover Item Template -->
        <DataTemplate x:Key="MoverItemTemplate">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Width="32"
                        Height="32"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Margin="0,0,8,0">
                    <TextBlock Text="{Binding ID}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              FontWeight="SemiBold"/>
                </Border>
                <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{Binding ModelType}"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - ListView -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Grid.Row="0"
                    BorderThickness="1,1,1,0"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,0,10,0">
                <ui:TextBox 
                            PlaceholderText="Search..."
                            Icon="Search24"
                            BorderThickness="0"
                            Margin="10,10,10,10"
                            Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>

            <!-- Mover List -->
            <Border Grid.Row="1"
                    BorderThickness="1,0,1,1"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,0,10,0">
                <ListView x:Name="MoversListView"
                          BorderThickness="0"
                          Background="Transparent"
                          ItemTemplate="{StaticResource MoverItemTemplate}"
                          ItemsSource="{Binding ViewModel.MoversView}"
                          IsSynchronizedWithCurrentItem="True">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="BorderBrush"
                                    Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                        Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected"
                                        Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
        </Grid>

        <!-- Separator -->
        <GridSplitter Grid.Column="1"
                      Width="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!-- Right Side - Form -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fixed button bar -->
            <StackPanel Grid.Row="0" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right" 
                      VerticalAlignment="Top"
                      Margin="0,10,20,10"
                      ZIndex="100">
                <ui:Button
                         ToolTip="Undo">
                    <ui:SymbolIcon Symbol="ArrowUndo24"/>
                </ui:Button>
                <ui:Button
                         Margin="10,0,10,0"
                         ToolTip="Redo">
                    <ui:SymbolIcon Symbol="ArrowRedo24"/>
                </ui:Button>
                <ui:Button x:Name="SaveButton" 
                         Content="Save" 
                         Margin="0,0,10,0"
                         Click="SaveButton_Click"/>
                <ui:Button x:Name="ExpertButton" 
                         Content="Expert" 
                         Appearance="Secondary"
                         Margin="0,0,10,0"/>
                <ui:Button x:Name="FilterButton" 
                         Appearance="Secondary"
                         Margin="0,0,10,0"
                         Click="FilterButton_Click">
                    <ui:SymbolIcon Symbol="Filter24"/>
                </ui:Button>
                <ui:Button x:Name="AddButton" 
                         Content="Add" 
                         Background="#2F70AF"
                         Margin="0,0,10,0"/>
                <ui:Button x:Name="DeleteButton" 
                         Content="Delete" 
                         Background="#FD292F"/>
            </StackPanel>
            
            <!-- Scrollable content -->
            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <ContentControl x:Name="BasicInfoSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource BasicInfoSectionTemplate}"/>
                    <Separator x:Name="BasicInfoSeparator" Margin="0,10,0,5"/>
                    <ContentControl x:Name="StatsSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource StatsSectionTemplate}"/>
                    <Separator x:Name="StatsSeparator" Margin="0,10,0,5"/>
                    <ContentControl x:Name="CombatSettingsSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource CombatSettingsSectionTemplate}"/>
                    <Separator x:Name="CombatSettingsSeparator" Margin="0,10,0,5"/>
                    
                    <!-- Model & Motions Section -->
                    <StackPanel x:Name="ModelMotionsSection">
                        <TextBlock Text="Model &amp; Motions"
                                Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 3D Model Display -->
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Height="250" 
                                    Margin="0,10,10,10">
                                <Grid>
                                    <TextBox 
                                        x:Name="Model3DFilePathTextBlock" 
                                        Visibility="Collapsed" 
                                        Text="{Binding ViewModel.MoversView.CurrentItem.Model.Model3DFilePath, Mode=OneWay}"
                                        TextChanged="Model3DFilePathTextBlock_TextChanged" />
                                    <!-- TODO: Transform this into a viewable combobox -->
                                    <TextBox 
                                        x:Name="ModelTextureExTextBlock"
                                        Visibility="Collapsed" 
                                        Text="{Binding ViewModel.MoversView.CurrentItem.Model.NTextureEx, Mode=OneWay}"
                                        TextChanged="ModelTextureExTextBlock_TextChanged"
                                        />
                                    <Image
                                        x:Name="DxImage" 
                                        Stretch="UniformToFill" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        MouseRightButtonDown="DxImage_MouseRightButtonDown" MouseWheel="DxImage_MouseWheel" />
                                </Grid>
                            </Border>
                            
                            <!-- Motions List -->
                            <Grid Grid.Column="1" Margin="10,10,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Left side with Add-Button and ListView -->
                                <ui:Button Content="Add" 
                                         Grid.Column="0"
                                         Grid.Row="0"
                                         Width="75"
                                         HorizontalAlignment="Left"
                                         Margin="0,0,10,5"/>

                                <Border Grid.Column="0"
                                        Grid.Row="1"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        Margin="0,0,10,0">
                                    <ListView
                                              x:Name="MotionsListView"
                                              Style="{StaticResource AppListViewStyle}"
                                              ItemContainerStyle="{StaticResource AppListViewItemStyle}"
                                              ItemsSource="{Binding ViewModel.MoversView.CurrentItem.Model.Motions}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <TextBlock Text="{Binding IMotion, Mode=OneWay}" />
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseDown">
                                                            <i:InvokeCommandAction Command="{Binding DataContext.PlayMotionCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Border>
                                
                                <!-- Right side with Generate-Button and settings -->
                                <ui:Button Content="Generate" 
                                         Grid.Column="1"
                                         Grid.Row="0"
                                         HorizontalAlignment="Left"
                                         Width="100"
                                         Margin="0,0,0,5"/>
                                
                                <Grid Grid.Column="1" 
                                      Grid.Row="1" Cursor="">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Identifier Row -->
                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Label with info icon -->
                                        <StackPanel Grid.Row="0" 
                                                  Orientation="Horizontal"
                                                  Margin="0,0,0,5">
                                            <TextBlock Text="Identifier" 
                                                     FontWeight="SemiBold" 
                                                     FontSize="12"/>
                                            <ui:SymbolIcon Symbol="Info20"
                                                        Style="{StaticResource InfoIconStyle}">
                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="Animation type"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        
                                        <!-- Dropdown -->
                                        <Border Grid.Row="1"
                                              Background="{DynamicResource ControlFillColorDefaultBrush}"
                                              BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                              BorderThickness="1"
                                              CornerRadius="4">
                                            <ComboBox Style="{StaticResource AppComboBoxStyle}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    ItemsSource="{Binding ViewModel.MotionsPossibilities, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    SelectedItem="{Binding SelectedItem.IMotion, ElementName=MotionsListView}" Cursor=""/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- File Row -->
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Label with info icon -->
                                        <StackPanel Grid.Row="0" 
                                                  Orientation="Horizontal"
                                                  Margin="0,0,0,5">
                                            <TextBlock Text="File" 
                                                     FontWeight="SemiBold" 
                                                     FontSize="12"/>
                                            <ui:SymbolIcon Symbol="Info20"
                                                        Style="{StaticResource InfoIconStyle}">
                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="Animation file"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        
                                        <!-- File input with button -->
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                   Style="{StaticResource AppTextBoxStyle}"

        <!-- Motion Dialog -->
        <Popup x:Name="MotionsPopup" 
              PlacementTarget="{Binding ElementName=MotionsButton}" 
              Placement="Center"
              IsOpen="False"
              StaysOpen="False"
              AllowsTransparency="True">

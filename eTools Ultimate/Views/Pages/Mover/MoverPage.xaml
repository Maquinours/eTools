                                             IsChecked="True"
                                             Checked="FieldFilter_Checked"
                                             Unchecked="FieldFilter_Unchecked"
                                             Tag="FileField"/>
                                    
                                    <CheckBox x:Name="ScaleFieldCheckBox" 
                                             Content="Scale" 

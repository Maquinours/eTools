                                             IsChecked="True"
                                             Checked="FieldFilter_Checked"
                                             Unchecked="FieldFilter_Unchecked"
                                             Tag="PatrolRangeField"/>
                                </StackPanel>
                            </Expander>
                            
                            <Expander Header="Model &amp; Motions Fields" 
                                     Margin="0,0,0,5"
                                     IsExpanded="False">
                                <StackPanel x:Name="ModelMotionsFieldsPanel">
                                    <CheckBox x:Name="ModelDisplayCheckBox" 
                                             Content="3D Model Display" 
                                             Style="{StaticResource FilterCheckBoxStyle}"
                                             IsChecked="True"
                                             Checked="FieldFilter_Checked"
                                             Unchecked="FieldFilter_Unchecked"
                                             Tag="ModelDisplay"/>
                                    
                                    <CheckBox x:Name="MotionsListCheckBox" 
                                             Content="Motions List" 
                                             Style="{StaticResource FilterCheckBoxStyle}"

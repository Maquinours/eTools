                                    <CheckBox x:Name="ElectricityResistanceFieldCheckBox" 
                                             Content="Electricity Resistance" 
                                             Style="{StaticResource FilterCheckBoxStyle}"
                                             IsChecked="True"
                                             Checked="FieldFilter_Checked"
                                             Unchecked="FieldFilter_Unchecked"
                                             Tag="ElectricityResistanceField"/>
                                </StackPanel>
                            </Expander>
                            
                            <Expander Header="Combat Settings Fields" 
                                     Margin="0,0,0,5"
                                     IsExpanded="False">
                                <StackPanel x:Name="CombatSettingsFieldsPanel">
                                    <CheckBox x:Name="AttackRangeFieldCheckBox" 
                                             Content="Attack Range" 
                                             Style="{StaticResource FilterCheckBoxStyle}"
                                             IsChecked="True"
                                             Checked="FieldFilter_Checked"
                                             Unchecked="FieldFilter_Unchecked"
                                             Tag="AttackRangeField"/>
                                    
                                    <CheckBox x:Name="AttackSpeedFieldCheckBox" 
                                             Content="Attack Speed" 
                                             Style="{StaticResource FilterCheckBoxStyle}"
                                             IsChecked="True"

                                Maximum="500"
                                SpinButtonPlacementMode="Inline"/>
                    </Grid>
                    <!-- Not handled for now -->
                    <!-- Patrol Range -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

        </DataTemplate>

        <!-- DataTemplate: Model, Mobility & Movement Section -->
        <DataTemplate x:Key="ModelMobilityMovementSectionTemplate">
                    <StackPanel>
                <TextBlock Text="Model / Mobility / Movement"
                                Style="{StaticResource SectionHeaderStyle}"/>
                        
                <!-- Oberer Bereich: 3D Model links, Animation List rechts -->
                <Grid Margin="0,10,0,20">
                            <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="347*"/>
                        <ColumnDefinition Width="384*"/>
                            </Grid.ColumnDefinitions>
                            
                    <!-- 3D Model Display (Links) -->
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                            Margin="0,0,378,0" Grid.ColumnSpan="2">
                                <Grid>
                                    <TextBox 
                                        x:Name="Model3DFilePathTextBlock" 
                                        Visibility="Collapsed" 
                                        Text="{Binding ViewModel.MoversView.CurrentItem.Model.Model3DFilePath, Mode=OneWay}"
                                        TextChanged="Model3DFilePathTextBlock_TextChanged" />
                                    <TextBox 
                                        x:Name="ModelTextureExTextBlock"
                                        Visibility="Collapsed" 
                                        Text="{Binding ViewModel.MoversView.CurrentItem.Model.NTextureEx, Mode=OneWay}"
                                        TextChanged="ModelTextureExTextBlock_TextChanged"
                                        />
                                    <Image
                                        x:Name="DxImage" 
                                        Stretch="UniformToFill" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                MouseRightButtonDown="DxImage_MouseRightButtonDown" 
                                MouseWheel="DxImage_MouseWheel" />
                                </Grid>
                            </Border>
                            
                    <!-- Animation List und Buttons (Rechts) -->
                    <Grid Grid.Column="1" Margin="25,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Animation List -->
                        <Border Grid.Column="0"
                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                BorderThickness="1"
                                Height="250">
                            <ListView
                                x:Name="MotionsListView"
                                Style="{StaticResource AppListViewStyle}"
                                ItemContainerStyle="{StaticResource AppListViewItemStyle}"
                                ItemsSource="{Binding ViewModel.MoversView.CurrentItem.Model.Motions}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Text="{Binding IMotion, Mode=OneWay}" />
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDown">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.PlayMotionCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>

                        <!-- Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                            <ui:Button x:Name="AddMotionButton"
                                     Content="Add"
                                     Appearance="Secondary"
                                     HorizontalAlignment="Stretch"
                                     Margin="0,0,0,10"/>

                            <ui:Button x:Name="DeleteMotionButton"
                                     Content="Delete"
                                     Appearance="Secondary"
                                     HorizontalAlignment="Stretch"
                                     Margin="0,0,0,10"/>

                            <ui:Button x:Name="GenerateMotionButton"
                                     Content="Generate"
                                     Appearance="Secondary"
                                     HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Unterer Bereich: Restliche Felder im zweier Grid -->
                <UniformGrid Columns="2" Margin="0,10,0,0">
                    <!-- Motion File -->
                    <Grid Style="{StaticResource FormFieldStyle}" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                            <TextBlock Text="File"
                                    Style="{StaticResource FieldLabelStyle}"/>
                            <ui:SymbolIcon Symbol="Info20"
                                    Style="{StaticResource InfoIconStyle}">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Animation file"/>
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                   Style="{StaticResource AppTextBoxStyle}"
                                   Text="{Binding SelectedItem.SzMotion, ElementName=MotionsListView}"/>
                            <ui:Button Grid.Column="1"
                                     Content="..."
                                     Width="30"
                                     Margin="5,0,0,0"/>
                        </Grid>
                    </Grid>

                    <!-- Identifier -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                            <TextBlock Text="Identifier"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Animation type"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                        <ComboBox Grid.Row="1"
                                Style="{StaticResource AppComboBoxStyle}"
                                ItemsSource="{Binding ViewModel.MotionsPossibilities, RelativeSource={RelativeSource AncestorType=Page}}"
                                SelectedItem="{Binding SelectedItem.IMotion, ElementName=MotionsListView}"/>
                                </Grid>
                                
                    <!-- Reference Dropdown -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                            <TextBlock Text="Reference"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Model reference"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ComboBox Grid.Row="1"
                                x:Name="ReferenceComboBox"
                                            Style="{StaticResource AppComboBoxStyle}"
                                SelectionChanged="ReferenceComboBox_SelectionChanged">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Model A"/>
                            <ComboBoxItem Content="Model B"/>
                            <ComboBoxItem Content="Model C"/>
                                    </ComboBox>
                                </Grid>
                                
                    <!-- Scale -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                            <TextBlock Text="Scale"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Scale factor"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ui:NumberBox Grid.Row="1"
                                x:Name="ScaleNumberBox"
                                Value="{Binding Model.FScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}"
                                Minimum="0.1"
                                Maximum="10"
                                SpinButtonPlacementMode="Inline" 
                                ValueChanged="ScaleNumberBox_ValueChanged"/>
                                </Grid>
                                
                    <!-- Speed -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                            <TextBlock Text="Speed"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Movement speed"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ui:NumberBox Grid.Row="1"
                                x:Name="SpeedNumberBox"
                                Value="{Binding Prop.FSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}"
                                            Minimum="0"
                                Maximum="100"
                                            SpinButtonPlacementMode="Inline"/>
                                </Grid>
                                
                    <!-- Flying -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                            <TextBlock Text="Flying"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Can fly?"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                        <ComboBox Grid.Row="1"
                                x:Name="FlyingComboBox"
                                Style="{StaticResource AppComboBoxStyle}"
                                Text="{Binding Prop.Flying, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem Content="Yes"/>
                            <ComboBoxItem Content="No"/>
                        </ComboBox>
                                </Grid>
                                
                    <!-- Additional Textures -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                            <TextBlock Text="Additional Textures"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Additional textures"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                        <ComboBox Grid.Row="1"
                                x:Name="AdditionalTexturesComboBox"
                                Style="{StaticResource AppComboBoxStyle}"
                                        BorderThickness="1"
                                Text="{Binding Model.NTextureEx, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                    <!-- Jump Height -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" 
                                Orientation="Horizontal">
                            <TextBlock Text="Jump Height"
                                    Style="{StaticResource FieldLabelStyle}"/>
                                            <ui:SymbolIcon Symbol="Info20"
                                                        Style="{StaticResource InfoIconStyle}">
                                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Jump height"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                        <ui:NumberBox Grid.Row="1"
                                x:Name="JumpHeightNumberBox"
                                Value="{Binding Prop.JumpHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}"
                                Minimum="0"
                                Maximum="100"
                                SpinButtonPlacementMode="Inline"/>
                                    </Grid>
                                    
                    <!-- Air Jump -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal">
                            <TextBlock Text="Air Jump"
                                    Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                    Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Number of air jumps"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                        <ui:NumberBox Grid.Row="1"
                                x:Name="AirJumpNumberBox"
                                Value="{Binding Prop.AirJump, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}"
                                Minimum="0"
                                Maximum="10"
                                SpinButtonPlacementMode="Inline"/>
                            </Grid>
                            
                    <!-- Fly Level -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" 
                                Orientation="Horizontal">
                            <TextBlock Text="Fly Level"
                                    Style="{StaticResource FieldLabelStyle}"/>
                                            <ui:SymbolIcon Symbol="Info20"
                                                        Style="{StaticResource InfoIconStyle}">
                                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Flight level"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                        <ui:NumberBox Grid.Row="1"
                                x:Name="FlyLevelNumberBox"
                                Value="{Binding Prop.FlyLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}"
                                Minimum="0"
                                Maximum="100"
                                SpinButtonPlacementMode="Inline"/>
                                        </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - ListView -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Grid.Row="0"
                    BorderThickness="1,1,1,0"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,0,10,0">
                <ui:TextBox 
                            PlaceholderText="Search..."
                            Icon="Search24"
                            BorderThickness="0"
                            Margin="10,10,10,10"
                            Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>

            <!-- Mover List -->
            <Border Grid.Row="1"
                    BorderThickness="1,0,1,1"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,0,10,0">
                <ListView x:Name="MoversListView"
                          BorderThickness="0"
                          Background="Transparent"
                          ItemTemplate="{StaticResource MoverItemTemplate}"
                          ItemsSource="{Binding ViewModel.MoversView}"
                          IsSynchronizedWithCurrentItem="True">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="BorderBrush"
                                    Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                        Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected"
                                        Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
                        </Grid>

        <!-- Separator -->
        <GridSplitter Grid.Column="1"
                      Width="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                            <Rectangle Width="2" Height="20" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>
                </StackPanel>
            </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!-- Right Side - Form -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fixed button bar -->
            <StackPanel Grid.Row="0" 
                      Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Top"
                      Margin="0,10,20,10"
                      ZIndex="100">
                    <ui:Button
                             ToolTip="Undo">
                        <ui:SymbolIcon Symbol="ArrowUndo24"/>
                    </ui:Button>
                    <ui:Button
                             Margin="10,0,10,0"
                             ToolTip="Redo">
                        <ui:SymbolIcon Symbol="ArrowRedo24"/>
                    </ui:Button>
                    <ui:Button x:Name="SaveButton" 
                             Content="Save" 
                             Margin="0,0,10,0"
                             Click="SaveButton_Click"/>
                    <ui:Button x:Name="ExpertButton" 
                             Content="Expert" 
                             Appearance="Secondary"
                             Margin="0,0,10,0"/>
                <ui:Button x:Name="FilterButton" 
                         Appearance="Secondary"
                         Margin="0,0,10,0"
                         Click="FilterButton_Click">
                    <ui:SymbolIcon Symbol="Filter24"/>
                </ui:Button>
                    <ui:Button x:Name="AddButton" 
                             Content="Add" 
                             Background="#2F70AF"
                             Margin="0,0,10,0"/>
                    <ui:Button x:Name="DeleteButton" 
                             Content="Delete" 
                             Background="#FD292F"/>
                </StackPanel>
                
            <!-- Scrollable content -->
            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <ContentControl x:Name="BasicInfoSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource BasicInfoSectionTemplate}"/>
                    <Separator x:Name="BasicInfoSeparator" Margin="0,10,0,5"/>
                    
                    <ContentControl x:Name="StatsSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource StatsSectionTemplate}"/>
                    <Separator x:Name="StatsSeparator" Margin="0,10,0,5"/>
                    
                    <ContentControl x:Name="CombatBattleSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource CombatBattleSectionTemplate}"/>
                    <Separator x:Name="CombatBattleSeparator" Margin="0,10,0,5"/>
                    
                    <ContentControl x:Name="DefensiveStatsResistancesSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource DefensiveStatsResistancesSectionTemplate}"/>
                    <Separator x:Name="DefensiveStatsResistancesSeparator" Margin="0,10,0,5"/>
                    
                    <ContentControl x:Name="ElementalDamageTypesSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource ElementalDamageTypesSectionTemplate}"/>
                    <Separator x:Name="ElementalDamageTypesSeparator" Margin="0,10,0,5"/>
                    
                    <ContentControl x:Name="SoundSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource SoundSectionTemplate}"/>
                    <Separator x:Name="SoundSeparator" Margin="0,10,0,5"/>
                    
                    <ContentControl x:Name="ModelMobilityMovementSection" 
                                   Content="{Binding ViewModel.MoversView}" 
                                   ContentTemplate="{StaticResource ModelMobilityMovementSectionTemplate}"/>
                    <Separator x:Name="ModelMobilityMovementSeparator" Margin="0,10,0,5" Visibility="Collapsed"/>
                </StackPanel>
        </ScrollViewer>
        </Grid>
        
        <!-- Motion Dialog -->
        <Popup x:Name="MotionsPopup" 
              PlacementTarget="{Binding ElementName=MotionsButton}" 
              Placement="Center"
              IsOpen="False"
              StaysOpen="False"
              AllowsTransparency="True">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="10">
                <ContentControl ContentTemplate="{StaticResource MotionsDialogTemplate}"/>
            </Border>
        </Popup>

        <!-- Add Filter Popup -->
        <Popup x:Name="FilterPopup" 
              PlacementTarget="{Binding ElementName=FilterButton}" 
              Placement="Bottom"
              IsOpen="False"
              StaysOpen="False"
              AllowsTransparency="True">
            <Border Background="{DynamicResource ApplicationBackgroundBrush}"
                   BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="15"
                   MaxHeight="500">
                <Grid Width="270">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                Margin="0,0,5,0"
                                Padding="0,0,10,0">
                        <StackPanel Width="245">
                            <TextBlock Text="Filter Sections" 
                                     FontWeight="Bold" 
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            
                            <!-- Section Filters -->
                            <CheckBox x:Name="BasicInfoSectionCheckBox" 
                                     Content="Basic Information" 
                                     Style="{StaticResource FilterCheckBoxStyle}"
                                     IsChecked="True"
                                     Checked="SectionFilter_Checked"
                                     Unchecked="SectionFilter_Unchecked"
                                     Tag="BasicInfoSection"/>
                            
                            <CheckBox x:Name="StatsSectionCheckBox" 
                                     Content="Stats" 
                                     Style="{StaticResource FilterCheckBoxStyle}"
                                     IsChecked="True"
                                     Checked="SectionFilter_Checked"
                                     Unchecked="SectionFilter_Unchecked"
                                     Tag="StatsSection"/>
                            

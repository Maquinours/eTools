                                        <TextBlock
                                            Margin="10,10,0,5"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            Text="Filter Fields" />

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Basic Information Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="ID"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="ID Key"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Name"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Description"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Killable"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Penya"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Duration"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="EXP"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Stats Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="STR"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="STA"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="DEX"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="INT"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Hit Rate"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Evasion Rate"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Combat/Battle Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Level"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Health Points"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Mana Points"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Artificial Intelligence (AI)"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Belligerence"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack min."
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack max."
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Animation 1"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Animation 2"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Animation 3"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Delay"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Defensive Stats Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Armor"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Magic Resistance"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Resistance Electricity"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Resistance Fire"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Resistance Wind"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Resistance Water"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Resistance Earth"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Elemental Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Element Type"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Element Attack"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Correction Value"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>
                    <ui:Button
                        x:Name="AddButton"
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Content="Add" />
                    <ui:Button
                        x:Name="DeleteButton"
                        Background="#FD292F"
                        Content="Delete" />
                </StackPanel>

                <!--  Formulare  -->
                <StackPanel Margin="20">
                    <ContentControl
                        Content="{Binding MoversView}"
                        ContentTemplate="{StaticResource BasicInfoSectionTemplate}"
                        Visibility="{Binding ShowBasicInformationSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <Separator Margin="0,10,0,5" Visibility="{Binding ShowBasicInformationSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <ContentControl
                        Content="{Binding MoversView}"
                        ContentTemplate="{StaticResource StatsSectionTemplate}"
                        Visibility="{Binding ShowStatsSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <Separator Margin="0,10,0,5" Visibility="{Binding ShowStatsSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <ContentControl
                        Content="{Binding MoversView}"
                        ContentTemplate="{StaticResource CombatSettingsSectionTemplate}"
                        Visibility="{Binding ShowBattleSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <Separator Margin="0,10,0,5" Visibility="{Binding ShowBattleSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <ContentControl
                        Content="{Binding MoversView}"
                        ContentTemplate="{StaticResource DefensiveStatsSectionTemplate}"
                        Visibility="{Binding ShowDefensiveStatsSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <Separator Margin="0,10,0,5" Visibility="{Binding ShowDefensiveStatsSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <ContentControl
                        Content="{Binding MoversView}"
                        ContentTemplate="{StaticResource ElementalSectionTemplate}"
                        Visibility="{Binding ShowElementalSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                    <Separator Margin="0,10,0,5" Visibility="{Binding ShowElementalSection, Mode=OneWay, Converter={StaticResource BoolToVis}}" />

                    <!--  Sound Section  -->
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Sound" />
                        <UniformGrid Columns="2">
                            <!--  SFX hit sound  -->
                            <Grid Style="{StaticResource FormFieldStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="SFX hit sound" />
                                    <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                        <ui:SymbolIcon.ToolTip>
                                            <ToolTip Content="Sound played when an SFX hit the mover" />
                                        </ui:SymbolIcon.ToolTip>
                                    </ui:SymbolIcon>
                                </StackPanel>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:AutoSuggestBox
                                        Grid.Column="0"
                                        DisplayMemberPath="Value"
                                        OriginalItemsSource="{Binding SoundIdentifiers}"
                                        Text="{Binding MoversView.CurrentItem.SndDmg2Identifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    <ui:Button
                                        Grid.Column="1"
                                        Width="30"
                                        Height="32"
                                        Margin="5,0,5,0"
                                        Command="{Binding SelectSndDmg2FileCommand, Mode=OneWay}"
                                        Content="..." />
                                    <ui:Button
                                        Grid.Column="2"
                                        Width="40"
                                        Height="32"
                                        Command="{Binding PlaySoundCommand, Mode=OneWay}"
                                        CommandParameter="{Binding MoversView.CurrentItem.SndDmg2, Mode=OneWay}">
                                        <ui:SymbolIcon Symbol="Play24" />
                                    </ui:Button>
                                </Grid>
                            </Grid>

                            <!--  Click sound  -->
                            <Grid Style="{StaticResource FormFieldStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Click sound" />
                                    <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                        <ui:SymbolIcon.ToolTip>
                                            <ToolTip Content="Sound played when the mover is clicked" />
                                        </ui:SymbolIcon.ToolTip>
                                    </ui:SymbolIcon>
                                </StackPanel>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:AutoSuggestBox
                                        Grid.Column="0"
                                        DisplayMemberPath="Value"
                                        OriginalItemsSource="{Binding SoundIdentifiers}"
                                        Text="{Binding MoversView.CurrentItem.SndIdle1Identifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    <ui:Button
                                        Grid.Column="1"
                                        Width="30"
                                        Height="32"
                                        Margin="5,0,5,0"
                                        Command="{Binding SelectSndIdle1FileCommand, Mode=OneWay}"
                                        Content="..." />
                                    <ui:Button
                                        Grid.Column="2"
                                        Width="40"
                                        Height="32"
                                        Command="{Binding PlaySoundCommand, Mode=OneWay}"
                                        CommandParameter="{Binding MoversView.CurrentItem.SndIdle1, Mode=OneWay}">
                                        <ui:SymbolIcon Symbol="Play24" />
                                    </ui:Button>
                                </Grid>
                            </Grid>
                        </UniformGrid>
                    </StackPanel>
                    <Separator Margin="0,10,0,5" />

                    <!--  Model & Motions Section  -->
                    <StackPanel Visibility="{Binding ShowModelSection, Mode=OneWay, Converter={StaticResource BoolToVis}}">
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Model" />

                        <!--  Preview and Motions Container  -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  3D Model Preview  -->
                            <Grid Grid.Column="0" Margin="0,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="250" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border
                                    Grid.Row="0"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Grid>
                                        <Image
                                            x:Name="DxImage"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            MouseRightButtonDown="DxImage_MouseRightButtonDown"
                                            MouseWheel="DxImage_MouseWheel"
                                            Stretch="UniformToFill" />
                                        <ContentControl
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource ModelWarningTemplate}"
                                            Visibility="{Binding IsModelAvailable, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}" />
                                        <ui:Button
                                            Margin="0,5,5,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Panel.ZIndex="1"
                                            Command="{Binding ShowReferenceModelContentDialogCommand}"
                                            ToolTip="Reference Model">
                                            <ui:SymbolIcon Symbol="ImageReflection24" />
                                        </ui:Button>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!--  Motions Container  -->
                            <Grid Grid.Column="1" Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="185" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Motion List  -->
                                <Border
                                    Grid.Column="0"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    BorderThickness="1">
                                    <ListView
                                        x:Name="MotionsListView"
                                        DisplayMemberPath="MotionTypeIdentifier"
                                        ItemContainerStyle="{StaticResource AppListViewItemStyle}"
                                        ItemsSource="{Binding MoversView.CurrentItem.Model.Motions}"
                                        Style="{StaticResource AppListViewStyle}" />
                                </Border>

                                <!--  Buttons neben der Liste  -->
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Top">
                                    <ui:Button Margin="0,0,0,10" ToolTip="Add Motion">
                                        <ui:SymbolIcon Symbol="Add24" />
                                    </ui:Button>
                                    <ui:Button Margin="0,0,0,10" ToolTip="Delete Motion">
                                        <ui:SymbolIcon Symbol="Delete24" />
                                    </ui:Button>
                                    <ui:Button ToolTip="Generate Motions">
                                        <ui:SymbolIcon Symbol="ArrowSync24" />
                                    </ui:Button>
                                </StackPanel>

                                <!--  Motion Fields  -->
                                <UniformGrid
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,0"
                                    Columns="2">
                                    <!--  Motion Key  -->
                                    <Grid Style="{StaticResource FormFieldStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Motion Key" />
                                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="Key identifier for the motion" />
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        <ui:AutoSuggestBox
                                            Grid.Row="1"
                                            DisplayMemberPath="Value"
                                            OriginalItemsSource="{Binding MotionIdentifiers, Mode=OneWay}"
                                            Text="{Binding Path=SelectedItem.MotionTypeIdentifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ElementName=MotionsListView}" />
                                    </Grid>

                                    <!--  Motion File  -->
                                    <Grid Style="{StaticResource FormFieldStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Motion File" />
                                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="File path for the motion" />
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <ui:AutoSuggestBox
                                                Grid.Column="0"
                                                OriginalItemsSource="{Binding ModelMotionFilePossibilities, Mode=OneWay}"
                                                Text="{Binding Path=SelectedItem.SzMotion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=MotionsListView}" />
                                            <ui:Button
                                                Grid.Column="1"
                                                Width="30"
                                                Height="32"
                                                Margin="5,0,0,0"
                                                Content="..." />
                                        </Grid>
                                    </Grid>
                                </UniformGrid>
                            </Grid>
                        </Grid>

                        <!--  Model Settings  -->
                        <StackPanel>
                            <!--  First Row  -->
                            <UniformGrid Columns="2">
                                <!--  File  -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="File" />
                                        <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                            <ui:SymbolIcon.ToolTip>
                                                <ToolTip Content="Model file path" />
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ui:AutoSuggestBox
                                            Grid.Column="0"
                                            OriginalItemsSource="{Binding ModelFilePossibilities, Mode=OneWay}"
                                            Text="{Binding MoversView.CurrentItem.Model.SzName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <ui:Button
                                            Grid.Column="1"
                                            Width="30"
                                            Height="32"
                                            Margin="5,0,0,0"
                                            Command="{Binding DataContext.SelectModelFileCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            Content="..." />
                                    </Grid>
                                </Grid>

                                <!--  Scale  -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="32" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Scale" />
                                        <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                            <ui:SymbolIcon.ToolTip>
                                                <ToolTip Content="Model scale factor" />
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ui:NumberBox
                                        Grid.Row="1"
                                        SpinButtonPlacementMode="Inline"
                                        Value="{Binding MoversView.CurrentItem.Model.FScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </UniformGrid>

                            <!--  Second Row  -->
                            <UniformGrid Columns="2">
                                <!--  Texture  -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Texture" />
                                        <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                            <ui:SymbolIcon.ToolTip>
                                                <ToolTip Content="Texture" />
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ComboBox
                                        Grid.Row="1"
                                        ItemsSource="{Binding ModelTexturesPossibilities}"
                                        SelectedValue="{Binding MoversView.CurrentItem.Model.NTextureEx, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource AppComboBoxStyle}" />
                                </Grid>
                            </UniformGrid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page> 
                                     FontWeight="Bold" 
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            
                            <Expander Header="Basic Information Fields" 
                                     Margin="0,0,0,5"
                                     IsExpanded="False">

                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="Animationsdatei"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        
                                        <!-- File Input mit Button -->
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0"
                                                   Style="{StaticResource AppTextBoxStyle}"
                                                   Text="{Binding SelectedItem.SzMotion, ElementName=MotionsListView}" Cursor="IBeam"/>
                                            <ui:Button Grid.Column="1" 
                                                     Content="..." 
                                                     Width="30"
                                                     Margin="5,0,0,0"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Motion Dialog -->
        <Popup x:Name="MotionsPopup" 
              PlacementTarget="{Binding ElementName=MotionsButton}" 
              Placement="Center"
              IsOpen="False"
              StaysOpen="False"
              AllowsTransparency="True">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="10">
                <ContentControl ContentTemplate="{StaticResource MotionsDialogTemplate}"/>
            </Border>
        </Popup>
    </Grid>
</Page> 
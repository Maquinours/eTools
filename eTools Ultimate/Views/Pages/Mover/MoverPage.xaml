                               Margin="0,0,10,0"
                               Click="SaveButton_Click"/>
                    <ui:Button x:Name="ExpertButton"
                               Content="Expert"
                               Appearance="Secondary"
                               Margin="0,0,10,0"/>
                    <ui:Button x:Name="FilterButton"
                               Content="Filter"
                               Appearance="Secondary"
                               Margin="0,0,10,0">
                        <ui:Button.ContextMenu>
                            <ContextMenu Background="{DynamicResource ApplicationBackgroundBrush}">
                                <ScrollViewer MaxHeight="600"
                                              VerticalScrollBarVisibility="Auto"
                                              Padding="0,0,15,0">
                                    <StackPanel MinWidth="250">
                                        <TextBlock Text="Filter Sections"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   Margin="10,5,0,5"/>

                                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                Padding="10,5">
                                            <StackPanel>
                                                <CheckBox Content="Basic Information"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                                <CheckBox Content="Stats"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                                <CheckBox Content="Combat / Battle"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                                <CheckBox Content="Defensive Stats &amp; Resistances"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                                <CheckBox Content="Elementar &amp; Damage Types"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                                <CheckBox Content="Sound"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                                <CheckBox Content="Model / Mobility / Movement"
                                                          IsChecked="True"
                                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                          Margin="0,2"/>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Text="Filter Fields"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   Margin="10,10,0,5"/>

                                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                Margin="0,0,0,5">
                                            <Expander Header="Basic Information Fields"
                                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                      Background="Transparent">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox Content="ID"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="ID Key"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Name"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Description"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Killable"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Penya"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Duration"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="EXP"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                Margin="0,0,0,5">
                                            <Expander Header="Stats Fields"
                                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                      Background="Transparent">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox Content="STR"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="STA"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="DEX"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="INT"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Hit Rate"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Evasion Rate"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                Margin="0,0,0,5">
                                            <Expander Header="Combat/Battle Fields"
                                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                      Background="Transparent">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox Content="Level"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Health Points"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Mana Points"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Artificial Intelligence (AI)"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Belligerence"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Attack min."
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Attack max."
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Attack Animation 1"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Attack Animation 2"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Attack Animation 3"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Attack Delay"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                Margin="0,0,0,5">
                                            <Expander Header="Defensive Stats Fields"
                                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                      Background="Transparent">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox Content="Armor"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Magic Resistance"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Resistance Electricity"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Resistance Fire"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Resistance Wind"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Resistance Water"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Resistance Earth"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                Margin="0,0,0,5">
                                            <Expander Header="Elemental Fields"
                                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                      Background="Transparent">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox Content="Element Type"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Element Attack"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                    <CheckBox Content="Correction Value"
                                                            IsChecked="True"
                                                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                              Margin="0,2"/>
                                                </StackPanel>
                                            </Expander>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </ContextMenu>
                        </ui:Button.ContextMenu>
                    </ui:Button>
                    <ui:Button x:Name="AddButton"
                               Content="Add"
                               Background="#2F70AF"
                               Margin="0,0,10,0"/>
                    <ui:Button x:Name="DeleteButton"
                               Content="Delete"
                               Background="#FD292F"/>
                </StackPanel>

                <!-- Formulare -->
                <StackPanel Margin="20">
                    <ContentControl Content="{Binding MoversView}"
                            ContentTemplate="{StaticResource BasicInfoSectionTemplate}"/>
                    <Separator Margin="0,10,0,5"/>
                    <ContentControl Content="{Binding MoversView}"
                            ContentTemplate="{StaticResource StatsSectionTemplate}"/>
                    <Separator Margin="0,10,0,5"/>
                    <ContentControl Content="{Binding MoversView}"
                            ContentTemplate="{StaticResource CombatSettingsSectionTemplate}"/>
                    <Separator Margin="0,10,0,5"/>
                    <ContentControl Content="{Binding MoversView}"
                            ContentTemplate="{StaticResource DefensiveStatsSectionTemplate}"/>
                    <Separator Margin="0,10,0,5"/>
                    <ContentControl Content="{Binding MoversView}"
                            ContentTemplate="{StaticResource ElementalSectionTemplate}"/>

                    <!-- Model & Motions Section -->
                    <StackPanel>
                        <TextBlock Text="Model"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Preview and Motions Container -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 3D Model Preview -->
                            <Grid Grid.Column="0"
                                    Margin="0,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="250"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <Grid>
                                        <TextBox x:Name="Model3DFilePathTextBlock"
                                                 Visibility="Collapsed"
                                                 Text="{Binding MoversView.CurrentItem.Model.Model3DFilePath, Mode=OneWay}"
                                                 TextChanged="Model3DFilePathTextBlock_TextChanged"/>
                                        <TextBox x:Name="ModelTextureExTextBlock"
                                                 Visibility="Collapsed"
                                                 Text="{Binding MoversView.CurrentItem.Model.NTextureEx, Mode=OneWay}"
                                                 TextChanged="ModelTextureExTextBlock_TextChanged"/>
                                        <TextBox x:Name="MoverIdentifierTextBox"
                                                 Visibility="Collapsed"
                                                 Text="{Binding MoversView.CurrentItem.Identifier, Mode=OneWay}"
                                                 TextChanged="MoverIdentifierTextBox_TextChanged" />
                                        <Image x:Name="DxImage"
                                               Stretch="UniformToFill"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               MouseRightButtonDown="DxImage_MouseRightButtonDown"
                                               MouseWheel="DxImage_MouseWheel"/>
                                        <ui:Button ToolTip="Reference Model"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,5,5,0"
                                                   Panel.ZIndex="1"
                                                   Command="{Binding ShowReferenceModelContentDialogCommand}">
                                            <ui:SymbolIcon Symbol="ImageReflection24"/>
                                        </ui:Button>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Motions Container -->
                            <Grid Grid.Column="1"
                                    Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="185"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Motion List -->
                                <Border Grid.Column="0"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1">
                                    <ListView x:Name="MotionsListView"
                                              Style="{StaticResource AppListViewStyle}"
                                              ItemContainerStyle="{StaticResource AppListViewItemStyle}"
                                              ItemsSource="{Binding MoversView.CurrentItem.Model.Motions}"
                                              DisplayMemberPath="MotionTypeIdentifier" />
                                </Border>

                                <!-- Buttons neben der Liste -->
                                <StackPanel Grid.Column="1"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Top">
                                    <ui:Button ToolTip="Add Motion"
                                               Margin="0,0,0,10">
                                        <ui:SymbolIcon Symbol="Add24"/>
                                    </ui:Button>
                                    <ui:Button ToolTip="Delete Motion"
                                               Margin="0,0,0,10">
                                        <ui:SymbolIcon Symbol="Delete24"/>
                                    </ui:Button>
                                    <ui:Button ToolTip="Generate Motions">
                                        <ui:SymbolIcon Symbol="ArrowSync24"/>
                                    </ui:Button>
                                </StackPanel>

                                <!-- Motion Fields -->
                                <UniformGrid Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Columns="2"
                                        Margin="0,10,0,0">
                                    <!-- Motion Key -->
                                    <Grid Style="{StaticResource FormFieldStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0"
                                                Orientation="Horizontal">
                                            <TextBlock Text="Motion Key"
                                                    Style="{StaticResource FieldLabelStyle}"/>
                                            <ui:SymbolIcon Symbol="Info20"
                                                    Style="{StaticResource InfoIconStyle}">
                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="Key identifier for the motion"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        <ui:AutoSuggestBox Grid.Row="1"
                                                 OriginalItemsSource="{Binding MotionIdentifiers, Mode=OneWay}"
                                                 DisplayMemberPath="Value"
                                                 Text="{Binding Path=SelectedItem.MotionTypeIdentifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ElementName=MotionsListView}"/>
                                    </Grid>

                                    <!-- Motion File -->
                                    <Grid Style="{StaticResource FormFieldStyle}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0"
                                                Orientation="Horizontal">
                                            <TextBlock Text="Motion File"
                                                    Style="{StaticResource FieldLabelStyle}"/>
                                            <ui:SymbolIcon Symbol="Info20"
                                                    Style="{StaticResource InfoIconStyle}">
                                                <ui:SymbolIcon.ToolTip>
                                                    <ToolTip Content="File path for the motion"/>
                                                </ui:SymbolIcon.ToolTip>
                                            </ui:SymbolIcon>
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ui:AutoSuggestBox Grid.Column="0"
                                                     OriginalItemsSource="{Binding ModelMotionFilePossibilities, Mode=OneWay}"
                                                     Text="{Binding Path=SelectedItem.SzMotion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=MotionsListView}" />
                                            <ui:Button Grid.Column="1"
                                                       Content="..."
                                                       Width="30"
                                                       Height="32"
                                                       Margin="5,0,0,0"/>
                                        </Grid>
                                    </Grid>
                                </UniformGrid>
                            </Grid>
                        </Grid>

                        <!-- Model Settings -->
                        <StackPanel>
                            <!-- First Row -->
                            <UniformGrid Columns="2">
                                <!-- File -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                                        <TextBlock Text="File"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                                <ToolTip Content="Model file path"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ui:AutoSuggestBox Grid.Column="0"
                                                           Text="{Binding MoversView.CurrentItem.Model.SzName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                           OriginalItemsSource="{Binding ModelFilePossibilities, Mode=OneWay}"
                                                           TextChanged="AutoSuggestBox_TextChanged" />
                                        <ui:Button Grid.Column="1"
                                                   Content="..."
                                                   Width="30"
                                                   Height="32"
                                                   Margin="5,0,0,0"
                                                   Command="{Binding DataContext.SelectModelFileCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                                    </Grid>
                                </Grid>

                                <!-- Scale -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="32"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                                        <TextBlock Text="Scale"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                                <ToolTip Content="Model scale factor"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ui:NumberBox Grid.Row="1"
                                                  Value="{Binding MoversView.CurrentItem.Model.FScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Minimum="0.1"
                                                  Maximum="10"
                                                  SpinButtonPlacementMode="Inline"/>
                                </Grid>
                            </UniformGrid>

                            <!-- Second Row -->
                            <UniformGrid Columns="2">
                                <!-- Texture -->
                                <Grid Style="{StaticResource FormFieldStyle}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                            Orientation="Horizontal">
                                        <TextBlock Text="Texture"
                                                Style="{StaticResource FieldLabelStyle}"/>
                                        <ui:SymbolIcon Symbol="Info20"
                                                Style="{StaticResource InfoIconStyle}">
                                            <ui:SymbolIcon.ToolTip>
                                                <ToolTip Content="Texture"/>
                                            </ui:SymbolIcon.ToolTip>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                    <ComboBox Grid.Row="1"
                                              Style="{StaticResource AppComboBoxStyle}"
                                              ItemsSource="{Binding ModelTexturesPossibilities}"
                                              SelectedValue="{Binding MoversView.CurrentItem.Model.NTextureEx, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </UniformGrid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Motion Dialog -->
        <Popup x:Name="MotionsPopup"
               PlacementTarget="{Binding ElementName=MotionsButton}"
               Placement="Center"
               IsOpen="False"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">
                <ContentControl ContentTemplate="{StaticResource MotionsDialogTemplate}"/>
            </Border>
        </Popup>
    </Grid>
</Page> 
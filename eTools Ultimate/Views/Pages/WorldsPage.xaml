<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="eTools_Ultimate.Views.Pages.WorldsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Worlds"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Gemeinsame Styles  -->
        <Style x:Key="InfoIconStyle" TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        </Style>
        <Style x:Key="FormFieldStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,15,25" />
        </Style>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,15,0,15" />
        </Style>

        <!--  DataTemplate fÃ¼r ListView Items  -->
        <DataTemplate x:Key="WorldListTemplate">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1">
                    <Image
                        Margin="2"
                        Source="{Binding Icon}"
                        Stretch="Uniform" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="{Binding Name}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding WorldKey}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!--  World Properties Template  -->
        <DataTemplate x:Key="WorldPropertiesTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="{i18n:StringLocalizer 'World Properties'}" />
                <UniformGrid Columns="2">
                    <!--  World Name  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'World Name'}" />
                        <TextBox Grid.Row="1" Text="{Binding WorldName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  World Key  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'World Key'}" />
                        <TextBox Grid.Row="1" Text="{Binding WorldKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  World ID  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'World ID'}" />
                        <TextBox Grid.Row="1" Text="{Binding WorldId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  World Define  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'World Define'}" />
                        <TextBox Grid.Row="1" Text="{Binding WorldDefine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  World Define ID  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'World Define ID'}" />
                        <TextBox Grid.Row="1" Text="{Binding WorldDefineId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  World Folder  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'World Folder'}" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding WorldFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:Button
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Content="..." />
                        </Grid>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - ListView  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10"
                    BorderThickness="0"
                    Icon="Search24"
                    PlaceholderText="{i18n:StringLocalizer 'Search...'}"
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  List  -->
            <Border
                Grid.Row="1"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView
                        Background="Transparent"
                        BorderThickness="0"
                        ItemTemplate="{StaticResource WorldListTemplate}"
                        ItemsSource="{Binding Items}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </ScrollViewer>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Forms  -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!--  Header Buttons  -->
                <StackPanel
                    Margin="0,10,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Panel.ZIndex="1"
                    Orientation="Horizontal">
                    <ui:Button ToolTip="{i18n:StringLocalizer 'Undo'}">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>
                    <ui:Button Margin="10,0" ToolTip="{i18n:StringLocalizer 'Redo'}">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>
                    <ui:Button
                        Margin="0,0,10,0"
                        Content="{i18n:StringLocalizer 'Save'}"
                        Icon="Save24" />
                    <ui:Button
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="{i18n:StringLocalizer 'Expert'}" />

                    <ui:Button
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Content="{i18n:StringLocalizer 'Add'}" />
                    <ui:Button Background="#FD292F" Content="{i18n:StringLocalizer 'Delete'}" />
                </StackPanel>

                <!--  Forms  -->
                <StackPanel Margin="20">
                    <ContentControl ContentTemplate="{StaticResource WorldPropertiesTemplate}" />

                    <!--  BigMap & MiniMap Preview  -->
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="400" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Main Header  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource SectionHeaderStyle}"
                            Text="{i18n:StringLocalizer 'Map Preview'}" />

                        <!--  Subheaders  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,10,0,10"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="{i18n:StringLocalizer 'BigMap'}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="20,10,0,10"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="{i18n:StringLocalizer 'MiniMap'}" />

                        <!--  BigMap Preview  -->
                        <Border
                            Grid.Row="2"
                            Grid.Column="0"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <Image
                                    x:Name="BigMapPreview"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="{Binding BigMapPreview}"
                                    Stretch="UniformToFill" />

                                <!--  Zoom Controls  -->
                                <StackPanel
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Orientation="Horizontal">
                                    <ui:Button
                                        Margin="0,0,5,0"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        Command="{Binding ZoomInCommand}"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        ToolTip="{i18n:StringLocalizer 'Zoom In'}">
                                        <ui:SymbolIcon Symbol="ZoomIn24" />
                                    </ui:Button>
                                    <ui:Button
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        Command="{Binding ZoomOutCommand}"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        ToolTip="{i18n:StringLocalizer 'Zoom Out'}">
                                        <ui:SymbolIcon Symbol="ZoomOut24" />
                                    </ui:Button>
                                </StackPanel>

                                <!--  Reset View Button  -->
                                <ui:Button
                                    Margin="0,5,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    Command="{Binding ResetViewCommand}"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    ToolTip="{i18n:StringLocalizer 'Reset View'}">
                                    <ui:SymbolIcon Symbol="ArrowReset24" />
                                </ui:Button>
                            </Grid>
                        </Border>

                        <!--  MiniMap Preview  -->
                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Width="400"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <Image
                                    x:Name="MiniMapPreview"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="{Binding MiniMapPreview}"
                                    Stretch="UniformToFill" />

                                <!--  MiniMap Controls  -->
                                <ui:Button
                                    Margin="0,5,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    Command="{Binding RefreshMiniMapCommand}"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    ToolTip="{i18n:StringLocalizer 'Refresh MiniMap'}">
                                    <ui:SymbolIcon Symbol="ArrowSync24" />
                                </ui:Button>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page> 
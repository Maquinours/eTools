                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Critical Attack Sound'}" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Sound played when landing a critical hit" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ComboBox
                                x:Name="CriticalAttackSoundComboBox"
                                Grid.Column="0"
                                DisplayMemberPath="Name" />
                            <ui:Button
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Content="Play"
                                Icon="Play24" />
                        </Grid>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - ListView  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10,10,10,10"
                    BorderThickness="0"
                    Icon="Search24"
                    PlaceholderText="{i18n:StringLocalizer 'Suche...'}"
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  Item List  -->
            <Border
                Grid.Row="1"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1">
                <ListView
                    x:Name="ItemsListView"
                    Background="Transparent"
                    BorderThickness="0"
                    IsSynchronizedWithCurrentItem="True"
                    ItemTemplate="{StaticResource ItemListTemplate}"
                    ItemsSource="{Binding ItemsView}"
                    SelectionChanged="VirtualizingGridView_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Form  -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Add und Delete Buttons oben rechts  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,10,30,10"
                    Orientation="Horizontal">
                    <ui:Button ToolTip="Undo">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>
                    <ui:Button Margin="10,0,10,0" ToolTip="Redo">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>
                    <ui:Button
                        x:Name="SaveButton"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Content="Save" />
                    <ui:Button
                        x:Name="ExpertButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Expert" />
                    <ui:Button
                        x:Name="FilterButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Filter">
                        <ui:Button.ContextMenu>
                            <ContextMenu Background="{DynamicResource ApplicationBackgroundBrush}">
                                <ScrollViewer
                                    MaxHeight="600"
                                    Padding="0,0,15,0"
                                    VerticalScrollBarVisibility="Auto">
                                    <StackPanel MinWidth="250">
                                        <TextBlock
                                            Margin="10,5,0,5"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            Text="{i18n:StringLocalizer 'Filter Sections'}" />

                                        <Border Padding="10,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <StackPanel>
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="General"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Inventory &amp; Stack"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Character Requirements"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Type &amp; Classification"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Combat Stats"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Resistance &amp; Alignment"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Blinkwing"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Misc"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Sound"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Flags &amp; Conditions"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                            </StackPanel>
                                        </Border>

                                        <TextBlock
                                            Margin="10,10,0,5"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            Text="{i18n:StringLocalizer 'Filter Fields'}" />

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="General Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="ID"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Name"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Description"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Icon"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Tradeable"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Shop-able"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Inventory &amp; Stack Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Stack Size"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Price"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Inventory Slot"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Character Requirements Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Gender Restriction"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Required Level"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Job Requirements"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Combat Stats Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Min/Max"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Defense"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Speed"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Resistance Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Element Resistances"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Alignment"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </ContextMenu>
                        </ui:Button.ContextMenu>
                    </ui:Button>
                    <ui:Button
                        x:Name="AddButton"
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Click="AddButton_Click"
                        Content="Add" />
                    <ui:Button
                        x:Name="DeleteButton"
                        Background="#FD292F"
                        Click="DeleteButton_Click"
                        Content="Delete" />
                </StackPanel>
            </Grid>

            <!--  Separator  -->
            <Separator
                Grid.Row="1"
                Margin="0,0,0,0"
                Background="{DynamicResource ControlStrokeColorDefaultBrush}" />

            <!--  Scrollable Content  -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!--  Formulare  -->
                    <StackPanel Margin="20">
                        <ContentControl Content="{Binding ItemsView}" ContentTemplate="{StaticResource GeneralSectionTemplate}" />
                        <ContentControl Content="{Binding ItemsView.CurrentItem}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Equipment}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource EquipmentSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Weapon}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource WeaponSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Blinkwing}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource BlinkwingSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.SpecialBuff}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource SpecialBuffSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Buff}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource BuffSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Consumable}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource ConsumableSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Pet}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource PetSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.BuffBead}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource BuffBeadSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Papering}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource PaperingSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Furniture}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource FurnitureSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.GuildHousePapering}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource GuildHousePaperingSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.GuildHouseFurniture}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource GuildHouseFurnitureSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.GuildHouseNpc}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource GuildHouseNpcSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Angel}">
                                            <Setter Property="ContentTemplate" Value="{StaticResource AngelSectionTemplate}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ItemsView.CurrentItem.Type}" Value="{x:Static itemModels:ItemType.Other}">
                                            <Setter Property="Visibility" Value="Hidden" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>

</Page>

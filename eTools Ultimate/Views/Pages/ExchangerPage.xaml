<Page
    x:Class="eTools_Ultimate.Views.Pages.ExchangerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:eTools_Ultimate.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:eTools_Ultimate.Models"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    Title="{i18n:StringLocalizer 'Exchanger'}"
    d:DataContext="{d:DesignInstance local:ExchangerPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:NumberFormatConverter x:Key="NumberFormatConverter" />
        <!--  Common Styles  -->
        <Style x:Key="InfoIconStyle" TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        </Style>
        <Style x:Key="FormFieldStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,15,5" />
        </Style>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,2" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,10,0,8" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>

        <!--  TextBox Style  -->
        <Style
            x:Key="AppTextBoxStyle"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!--  ComboBox Style  -->
        <Style
            x:Key="AppComboBoxStyle"
            BasedOn="{StaticResource {x:Type ComboBox}}"
            TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
        </Style>

        <!--  Exchanger Item Template  -->
        <DataTemplate x:Key="ExchangerItemTemplate">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="{Binding MmiIdentifier}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding Key}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!--  Exchange Requirement Template  -->
        <DataTemplate x:Key="ExchangeRequirementTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Style="{StaticResource AppTextBoxStyle}"
                    Text="{Binding DwItemId, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                <ui:NumberBox
                    Grid.Column="1"
                    Width="80"
                    MinHeight="28"
                    Margin="5,0,0,0"
                    Maximum="9999"
                    Minimum="1"
                    SpinButtonPlacementMode="Inline"
                    Value="{Binding NItemNum, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - ListView  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10,10,10,10"
                    BorderThickness="0"
                    Icon="Search24"
                    PlaceholderText="{i18n:StringLocalizer 'Search...'}"
                    Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  Exchanger List  -->
            <Border
                Grid.Row="1"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1">
                <ListView
                    x:Name="ExchangersListView"
                    Background="Transparent"
                    BorderThickness="0"
                    IsSynchronizedWithCurrentItem="True"
                    ItemTemplate="{StaticResource ExchangerItemTemplate}"
                    ItemsSource="{Binding ViewModel.ExchangesView}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Form  -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!--  Static Header mit Buttons  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,10,20,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                ZIndex="1">
                    <ui:Button ToolTip="{i18n:StringLocalizer 'Undo'}">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>
                    <ui:Button Margin="10,0,10,0" ToolTip="{i18n:StringLocalizer 'Redo'}">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>
                    <ui:Button
                        x:Name="SaveButton"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Content="{i18n:StringLocalizer 'Save'}" />
                    <ui:Button
                        x:Name="ExpertButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="{i18n:StringLocalizer 'Expert'}" />
                    <ui:Button
                        x:Name="AddButton"
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Content="{i18n:StringLocalizer 'Add'}"
                        Icon="Add24" />
                    <ui:Button
                        x:Name="DeleteButton"
                        Background="#FD292F"
                        Content="{i18n:StringLocalizer 'Delete'}"
                        Icon="Delete24" />
            </StackPanel>
            
            <!--  Scrollable Content  -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!--  Formulare  -->
                    <StackPanel Margin="20">
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="{i18n:StringLocalizer 'Basic Information'}" />
                    <UniformGrid Columns="2">
                        <!--  MMI_Key  -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Cursor=""
                                Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Exchanger MMI_Key'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'The MMI key for the exchanger (e.g. MMI_CHANGTICKET01)'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <TextBox
                                x:Name="MMIKeyTextBox"
                                Grid.Row="1"
                                Style="{StaticResource AppTextBoxStyle}"
                                Text="{Binding SelectedItem.MmiId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=ExchangersListView}" />
                        </Grid>
                        <!--  Name  -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Exchanger Name'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'Display name of the exchanger (IDS_TEXTCLIENT_INC_)'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <TextBox
                                x:Name="NameTextBox"
                                Grid.Row="1"
                                Style="{StaticResource AppTextBoxStyle}"
                                Text="{Binding ExchangerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </UniformGrid>

                    <Separator Margin="0,15,0,15" />

                    <!--  Exchange Requirements Section  -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Style="{StaticResource SectionHeaderStyle}"
                            Text="{i18n:StringLocalizer 'Exchange Requirements'}" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,10,0"
                                Background="#2F70AF"
                                Content="{i18n:StringLocalizer 'Add Item'}"
                                Icon="Add12" />
                            <ui:Button
                                Background="#FD292F"
                                Content="{i18n:StringLocalizer 'Delete Item'}"
                                Icon="Delete12" />
                        </StackPanel>
                    </Grid>

                    <!--  DataGrid für Exchange Requirements  -->
                    <Grid Margin="0,0,0,20">
                        <!--  TabControl  -->
                        <TabControl
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                            BorderThickness="1">
                            <TabItem Header="{i18n:StringLocalizer 'Conditions'}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Table Headers  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Item ID'}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Width="80"
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Quantity'}" />
                                    </Grid>

                                    <!--  Items Liste  -->
                                    <ListView
                                        Grid.Row="1"
                                        MaxHeight="150"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ItemTemplate="{StaticResource ExchangeRequirementTemplate}"
                                        ItemsSource="{Binding SelectedItem.Conditions, Mode=OneWay, ElementName=SetListView}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="0,2" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </Grid>
                            </TabItem>

                            <TabItem Header="{i18n:StringLocalizer 'Remove'}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Table Headers  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Item ID'}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Width="80"
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Quantity'}" />
                                    </Grid>

                                    <!--  Items Liste  -->
                                    <ListView
                                        Grid.Row="1"
                                        MaxHeight="150"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ItemTemplate="{StaticResource ExchangeRequirementTemplate}"
                                        ItemsSource="{Binding ViewModel.RemoveCollection, Mode=TwoWay}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="0,2" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </Grid>
                            </TabItem>

                            <TabItem Header="{i18n:StringLocalizer 'Pay'}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Table Headers  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Item ID'}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Width="80"
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Amount'}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Width="80"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{i18n:StringLocalizer 'Chance %'}" />
                                    </Grid>

                                    <!--  Items Liste  -->
                                    <ListView
                                        Grid.Row="1"
                                        MaxHeight="150"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ItemsSource="{Binding ViewModel.PayCollection, Mode=TwoWay}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="0,2" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox
                                                        Grid.Column="0"
                                                        Style="{StaticResource AppTextBoxStyle}"
                                                        Text="{Binding ItemID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    <ui:NumberBox
                                                        Grid.Column="1"
                                                        Width="80"
                                                        MinHeight="28"
                                                        Margin="5,0,0,0"
                                                        Maximum="9999"
                                                        Minimum="1"
                                                        SpinButtonPlacementMode="Inline"
                                                        Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}" />
                                                    <ui:NumberBox
                                                        Grid.Column="2"
                                                        Width="80"
                                                        MinHeight="28"
                                                        Margin="5,0,0,0"
                                                        Maximum="100"
                                                        Minimum="0"
                                                        SpinButtonPlacementMode="Inline"
                                                        Value="{Binding Chance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>

                    <Separator Margin="0,10,0,15" />

                    <!--  Sets Section  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Style="{StaticResource SectionHeaderStyle}"
                            Text="{i18n:StringLocalizer 'Sets'}" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,10,0"
                                Background="#2F70AF"
                                Content="{i18n:StringLocalizer 'Add Set'}"
                                Icon="Add12" />
                            <ui:Button
                                Background="#FD292F"
                                Content="{i18n:StringLocalizer 'Delete Set'}"
                                Icon="Delete12" />
                        </StackPanel>
                    </Grid>

                    <!--  Set Selection  -->
                    <Border
                        Margin="0,0,0,20"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <ListView
                            x:Name="SetListView"
                            Height="300"
                            Margin="5"
                            Background="Transparent"
                            BorderThickness="0"
                            IsSynchronizedWithCurrentItem="True"
                            ItemsSource="{Binding SelectedItem.Sets, Mode=OneWay, ElementName=ExchangersListView}"
                            SelectedIndex="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="Margin" Value="2" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                            <Setter Property="Foreground" Value="White" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Width="32"
                                            Height="32"
                                            Margin="0,0,8,0"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Foreground="{Binding Text.SolidColorBrushColor}"
                                                Text="{i18n:StringLocalizer 'T'}" />
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="{Binding Text.SolidColorBrushColor}"
                                                Text="{Binding Text.Name}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                Text="{Binding Text.Identifier}" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <!--  DataGrid für Description  -->
                    <Grid Margin="0,5,0,10" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page> 
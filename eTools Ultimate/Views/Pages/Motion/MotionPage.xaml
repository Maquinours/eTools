<Page
    x:Class="eTools_Ultimate.Views.Pages.Motion.MotionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:eTools_Ultimate.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages.Motion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Motion Editor"
    d:DataContext="{d:DesignInstance local:MotionPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="791"
    d:DesignWidth="1600"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Standard Converter  -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  Common Styles  -->
        <Style x:Key="InfoIconStyle" TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        </Style>
        <Style x:Key="FormFieldStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,15,10" />
        </Style>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,2" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>

        <!--  DataTemplate: Motion Details Section  -->
        <DataTemplate x:Key="MotionDetailsSectionTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Motion Details" />
                <UniformGrid Margin="0,10,0,0" Columns="2">
                    <!--  Motion ID  -->
                    <Grid Margin="0,0,15,20" Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Motion ID" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Unique identifier for the motion" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <TextBox
                            x:Name="MotionIdTextBox"
                            Grid.Row="1"
                            Text="{Binding Path=DwId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  Motion Icon  -->
                    <Grid Margin="0,0,15,20" Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Motion Icon" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Icon image displayed for the motion" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="MotionIconTextBox"
                                Grid.Column="0"
                                Text="{Binding Path=SzIconName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:Button
                                Grid.Column="1"
                                Height="36"
                                Margin="5,0,0,0"
                                Content="..." />
                            <Border
                                Grid.Column="2"
                                Width="32"
                                Height="32"
                                Margin="10,0,0,0"
                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                BorderThickness="1">
                                <Image
                                    x:Name="MotionIconPreview"
                                    Margin="2"
                                    Source="{Binding Icon}" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  InGame Name  -->
                    <Grid Margin="0,0,15,20" Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="InGame Name" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Name displayed in game" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <TextBox
                            x:Name="InGameNameTextBox"
                            Grid.Row="1"
                            Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  Description  -->
                    <Grid
                        Grid.ColumnSpan="2"
                        Margin="0,0,15,20"
                        Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Description" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Description of the motion" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <TextBox
                            x:Name="DescriptionTextBox"
                            Grid.Row="1"
                            Height="Auto"
                            AcceptsReturn="False"
                            Text="{Binding Path=Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

        <!--  DataTemplate for ListView Items  -->
        <DataTemplate x:Key="MotionListTemplate">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="1">
                    <Image
                        Margin="2"
                        Source="{Binding Icon}"
                        Stretch="Uniform" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding Name}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#B0B0B0"
                        Text="{Binding Identifier}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  Left Side - ListView  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Search Bar  -->
                <Border
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="1,1,1,0">
                    <ui:TextBox
                        Margin="10,10,10,10"
                        BorderThickness="0"
                        Icon="Search24"
                        PlaceholderText="Suche..."
                        Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>

                <!--  Motion List  -->
                <Border
                    Grid.Row="1"
                    Margin="0,0,10,0"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="1,0,1,1">
                    <ListView
                        x:Name="MotionsListView"
                        Background="Transparent"
                        BorderThickness="0"
                        IsSynchronizedWithCurrentItem="True"
                        ItemTemplate="{StaticResource MotionListTemplate}"
                        ItemsSource="{Binding ViewModel.MotionsView}"
                        SelectionChanged="MotionsListView_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="#3F3F46" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#404040" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#2D2D30" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>
            </Grid>

            <!--  Separator  -->
            <GridSplitter
                Grid.Column="1"
                Width="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="Transparent">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="{x:Type GridSplitter}">
                        <Grid Background="Transparent">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Rectangle
                                    Width="2"
                                    Height="20"
                                    Margin="0,2,0,2"
                                    Fill="#B0B0B0" />
                                <Rectangle
                                    Width="2"
                                    Height="20"
                                    Margin="0,2,0,2"
                                    Fill="#B0B0B0" />
                                <Rectangle
                                    Width="2"
                                    Height="20"
                                    Margin="0,2,0,2"
                                    Fill="#B0B0B0" />
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!--  Right Side - Form  -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!--  Add and Delete Buttons top right  -->
                    <StackPanel
                        Margin="0,10,20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        ZIndex="1">
                        <ui:Button Command="{Binding UndoCommand}" ToolTip="Undo">
                            <ui:SymbolIcon Symbol="ArrowUndo24" />
                        </ui:Button>
                        <ui:Button
                            Margin="10,0,10,0"
                            Command="{Binding RedoCommand}"
                            ToolTip="Redo">
                            <ui:SymbolIcon Symbol="ArrowRedo24" />
                        </ui:Button>
                        <ui:Button
                            x:Name="SaveButton"
                            Margin="0,0,10,0"
                            Click="SaveButton_Click"
                            Content="Save" />
                        <ui:Button
                            x:Name="ExpertButton"
                            Margin="0,0,10,0"
                            Appearance="Secondary"
                            Content="Expert" />
                        <ui:Button
                            x:Name="AddButton"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Left"
                            Appearance="Primary"
                            Background="#2F70AF"
                            Click="AddButton_Click">
                            <TextBlock Text="Add" Foreground="White" />
                        </ui:Button>
                        <ui:Button
                            x:Name="DeleteButton"
                            Background="#FD292F"
                            Click="DeleteButton_Click"
                            Content="Delete" />
                    </StackPanel>

                    <!--  Form  -->
                    <StackPanel Margin="20">
                        <ContentControl Content="{Binding ViewModel.MotionsView}" ContentTemplate="{StaticResource MotionDetailsSectionTemplate}" />
                        
                        <!--  3D Model Preview Section  -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Model Preview" />
                            
                            <!--  Preview Container  -->
                            <Grid Margin="0,0,0,15" HorizontalAlignment="Left">
                                <!--  3D Model Preview  -->
                                <Grid Width="500">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="250" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Grid.Row="0"
                                        Background="#2D2D30"
                                        BorderBrush="#3F3F46"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Grid>
                                            <Image
                                                x:Name="DxImage"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Stretch="UniformToFill" />

                                            <StackPanel
                                                Margin="0,5,5,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Panel.ZIndex="1"
                                                Orientation="Horizontal">
                                                <ui:Button Margin="0,0,5,0">
                                                    <ui:Button.Style>
                                                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.Auto3DRendering, RelativeSource={RelativeSource AncestorType=Page}}" Value="False">
                                                                    <Setter Property="ToolTip" Value="Play selected motion" />
                                                                    <Setter Property="Command" Value="{Binding PlayMotionCommand, Mode=OneWay}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding DataContext.Auto3DRendering, RelativeSource={RelativeSource AncestorType=Page}}" Value="True">
                                                                    <Setter Property="ToolTip" Value="Stop current motion" />
                                                                    <Setter Property="Command" Value="{Binding StopMotionCommand, Mode=OneWay}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ui:Button.Style>
                                                    <ui:SymbolIcon>
                                                        <ui:SymbolIcon.Style>
                                                            <Style TargetType="ui:SymbolIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DataContext.Auto3DRendering, RelativeSource={RelativeSource AncestorType=Page}}" Value="False">
                                                                        <Setter Property="Symbol" Value="Play24" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DataContext.Auto3DRendering, RelativeSource={RelativeSource AncestorType=Page}}" Value="True">
                                                                        <Setter Property="Symbol" Value="Stop24" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ui:SymbolIcon.Style>
                                                    </ui:SymbolIcon>
                                                </ui:Button>
                                                <ui:Button Command="{Binding ShowReferenceModelContentDialogCommand}" ToolTip="Reference Model">
                                                    <ui:SymbolIcon Symbol="ImageReflection24" />
                                                </ui:Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!--  Loop Mode Dropdown  -->
                                    <ComboBox Grid.Row="1" Margin="0,10,0,0" SelectedIndex="0">
                                        <ComboBoxItem Content="Loop" />
                                        <ComboBoxItem Content="One Time Keep" />
                                        <ComboBoxItem Content="One Time" />
                                    </ComboBox>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
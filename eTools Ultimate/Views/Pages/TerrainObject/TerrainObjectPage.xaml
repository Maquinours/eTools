<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="eTools_Ultimate.Views.Pages.TerrainObject.TerrainObjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:eTools_Ultimate.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:eTools_Ultimate.ViewModels.Pages"
    Title="Terrain/Object"
    d:DataContext="{d:DesignInstance viewmodels:TerrainsViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="1200"
    d:DesignWidth="1200"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!--  Common Styles  -->
        <Style x:Key="InfoIconStyle" TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        </Style>
        <Style x:Key="FormFieldStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,15,25" />
        </Style>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,15,0,15" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>

        <!--  Model Warning Template  -->
        <DataTemplate x:Key="ModelWarningTemplate">
            <Border
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource LayerFillColorDefaultBrush}"
                Opacity="0.95">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon
                        Margin="0,0,0,10"
                        FontSize="48"
                        Foreground="{DynamicResource SystemFillColorCautionBrush}"
                        Symbol="Warning24" />
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="No Texture Available" />
                    <TextBlock
                        MaxWidth="250"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding Path=ModelViewerError, Mode=OneWay}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - ListView  -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10"
                    BorderThickness="0"
                    Icon="Search24"
                    PlaceholderText="Search..."
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  List  -->
            <Border
                Grid.Row="1"
                Margin="0,0,10,0"
                VerticalAlignment="Stretch"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1">
                <TreeView
                    x:Name="TerrainsTreeView"
                    VerticalAlignment="Stretch"
                    dd:DragDrop.DragDropContext="TerrainsTreeView"
                    dd:DragDrop.DropHandler="{Binding DragDropHandler}"
                    dd:DragDrop.IsDragSource="True"
                    dd:DragDrop.IsDropTarget="True"
                    dd:DragDrop.SelectDroppedItems="True"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding TerrainsView}"
                    Loaded="TerrainsTreeView_Loaded"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <TreeView.Resources>
                        <!--  Template for braces  -->
                        <HierarchicalDataTemplate DataType="{x:Type models:TerrainBrace}" ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ " />
                                <TextBlock Text="{Binding Prop.Name}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <!--  Template for terrains  -->
                        <DataTemplate DataType="{x:Type models:Terrain}">
                            <StackPanel Orientation="Horizontal">
                                <Border
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Image
                                        Margin="2"
                                        Source="{Binding TextureIcon}"
                                        Stretch="Uniform" />
                                </Border>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Prop.DwId}" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Forms  -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!--  Header Buttons  -->
                <StackPanel
                    Margin="0,10,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    ZIndex="1">
                    <ui:Button ToolTip="Undo">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>
                    <ui:Button Margin="10,0" ToolTip="Redo">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>
                    <ui:Button
                        Margin="0,0,10,0"
                        Content="Save"
                        Icon="Save24" />
                    <ui:Button
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Expert" />
                    
                    <ui:Button
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Content="Add" />
                    <ui:Button
                        Background="#FD292F"
                        Content="Delete" />
                </StackPanel>

                <!--  Forms  -->
                <StackPanel Margin="20">
                    <ContentControl Content="{Binding SelectedItem, ElementName=TerrainsTreeView}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type models:TerrainBrace}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Terrains folder" />
                                    <UniformGrid Columns="2">
                                        <!--  Folder Name  -->
                                        <Grid Style="{StaticResource FormFieldStyle}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Folder Name" />
                                            <TextBox
                                                Grid.Row="1"
                                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{Binding Prop.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </Grid>

                                        <!--  Frame Count  -->
                                        <Grid Style="{StaticResource FormFieldStyle}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Frame Count" />
                                            <ui:NumberBox
                                                Grid.Row="1"
                                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Value="{Binding Prop.FrameCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </Grid>
                                    </UniformGrid>
                                </StackPanel>
                            </DataTemplate>

                            <DataTemplate DataType="{x:Type models:Terrain}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Terrain" />
                                    <UniformGrid Columns="2">
                                        <!--  Terrain ID  -->
                                        <Grid Style="{StaticResource FormFieldStyle}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Terrain ID" />
                                            <TextBox
                                                Grid.Row="1"
                                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Text="{Binding Prop.DwId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </Grid>

                                        <!--  Terrain Texture  -->
                                        <Grid Style="{StaticResource FormFieldStyle}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Terrain Texture" />
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox
                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    Text="{Binding Prop.SzTextureFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                <ui:Button
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                    Content="..."
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                <Border
                                                    Grid.Column="2"
                                                    Width="32"
                                                    Height="32"
                                                    Margin="10,0,0,0"
                                                    BorderThickness="1"
                                                    Cursor="">
                                                    <Image Margin="2" Source="{Binding TextureIcon}" />
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </UniformGrid>
                                </StackPanel>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page> 
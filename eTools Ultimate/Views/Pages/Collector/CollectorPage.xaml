<Page
    x:Class="eTools_Ultimate.Views.Pages.CollectorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CollectorPage"
    d:DataContext="{d:DesignInstance local:CollectorPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main content with TabControl -->
        <ui:Card Margin="12" VerticalAlignment="Top">
            <TabControl>
                <TabItem Header="Enchant">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <ui:DataGrid 
                            Grid.Row="1"
                            ItemsSource="{Binding CollectingEnchant}" 
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                            <ui:DataGrid.Columns>
                                <DataGridTextColumn 
                                    Header="Enchant Level" 
                                    Binding="{Binding Level}" 
                                    Width="150"/>
                                <DataGridTextColumn 
                                    Header="Chance (out of 1.000.000)" 
                                    Binding="{Binding Probability}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Percentage" 
                                    Binding="{Binding PercentageFormatted}" 
                                    Width="100"/>
                                <DataGridTemplateColumn 
                                    Header="Action" 
                                    Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:Button
                                                Appearance="Transparent"
                                                Icon="{ui:SymbolIcon Delete24}"
                                                ToolTip="Delete Item"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Items">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Search Bar -->
                        <ui:TextBox
                            Grid.Row="0"
                            Margin="0,8,0,8"
                            PlaceholderText="Search..."
                            Icon="{ui:SymbolIcon Search24}"/>
                        
                        <!-- Status und Add Button -->
                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <ui:TextBlock 
                                Text="Total Probability 1.000.000/1.000.000" 
                                VerticalAlignment="Center"/>
                            
                            <ui:Button 
                                Content="Add Item"
                                HorizontalAlignment="Right"
                                Appearance="Primary"
                                Icon="{ui:SymbolIcon Add24}"/>
                        </Grid>
                        
                        <!-- DataGrid for Items -->
                        <ui:DataGrid 
                            Grid.Row="2"
                            ItemsSource="{Binding CollectingItems}" 
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                            <ui:DataGrid.Columns>
                                <DataGridTextColumn 
                                    Header="Item ID" 
                                    Binding="{Binding ItemId}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Chance (out of 1.000.000)" 
                                    Binding="{Binding Probability}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Percentage" 
                                    Binding="{Binding PercentageFormatted}" 
                                    Width="100"/>
                                <DataGridTemplateColumn 
                                    Header="Action" 
                                    Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:Button
                                                Appearance="Transparent"
                                                Icon="{ui:SymbolIcon Delete24}"
                                                ToolTip="Delete Item"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Premium Items">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <ui:DataGrid 
                            Grid.Row="1"
                            ItemsSource="{Binding PremiumItems}" 
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                            <ui:DataGrid.Columns>
                                <DataGridTextColumn 
                                    Header="Item ID" 
                                    Binding="{Binding ItemId}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Chance (out of 1.000.000)" 
                                    Binding="{Binding Probability}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Percentage" 
                                    Binding="{Binding PercentageFormatted}" 
                                    Width="100"/>
                                <DataGridTemplateColumn 
                                    Header="Action" 
                                    Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:Button
                                                Appearance="Transparent"
                                                Icon="{ui:SymbolIcon Delete24}"
                                                ToolTip="Delete Item"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Premium Status Items">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <ui:DataGrid 
                            Grid.Row="1"
                            ItemsSource="{Binding PremiumStatusItems}" 
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                            <ui:DataGrid.Columns>
                                <DataGridTextColumn 
                                    Header="Item ID" 
                                    Binding="{Binding ItemId}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Chance (out of 1.000.000)" 
                                    Binding="{Binding Probability}" 
                                    Width="200"/>
                                <DataGridTextColumn 
                                    Header="Percentage" 
                                    Binding="{Binding PercentageFormatted}" 
                                    Width="100"/>
                                <DataGridTemplateColumn 
                                    Header="Action" 
                                    Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ui:Button
                                                Appearance="Transparent"
                                                Icon="{ui:SymbolIcon Delete24}"
                                                ToolTip="Delete Item"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </ui:Card>
    </Grid>
</Page> 
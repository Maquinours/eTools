<Page
    x:Class="eTools_Ultimate.Views.Pages.NpcPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="NpcPage"
    d:DataContext="{d:DesignInstance local:NpcPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="1209"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Common Styles -->
        <Style x:Key="InfoIconStyle"
                TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment"
                    Value="Right"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="5,0,0,0"/>
            <Setter Property="Foreground"
                    Value="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Style>
        <Style x:Key="FormFieldStyle"
                TargetType="Grid">
            <Setter Property="Margin"
                    Value="0,0,15,10"/>
        </Style>
        <Style x:Key="FieldLabelStyle"
                TargetType="TextBlock">
            <Setter Property="Margin"
                    Value="0,0,0,5"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
        </Style>
        <Style x:Key="SectionHeaderStyle"
                TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Margin"
                    Value="0,15,0,15"/>
        </Style>
    </Page.Resources>

    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: Search bar and ListView -->
            <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search bar -->
                <ui:TextBox 
                    Grid.Row="0" 
                    PlaceholderText="Search NPC..." 
                    Margin="5,5,15,10"
                    Icon="Search24"
                    Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Cursor="" />
                
                <!-- ListView for NPC list -->
                <Border Grid.Row="1"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        Margin="5,0,15,5">
                    <ListView 
                        BorderThickness="0" 
                        Background="Transparent"
                        Margin="0,0,0,0"
                        ItemsSource="{Binding ViewModel.CharactersView}"
                        IsSynchronizedWithCurrentItem="True">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background"
                                        Value="Transparent"/>
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                        <Setter Property="Foreground"
                                                Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Width="32"
                                            Height="32"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Margin="0,0,8,0">
                                        <Image Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Margin="2"
                                               Source="{Binding Icon}"/>
                                    </Border>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Id}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>

            <!-- Separator -->
            <GridSplitter Grid.Column="1"
                          Grid.RowSpan="2"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{DynamicResource ControlElevationBorderBrush}"/>

        <ScrollViewer Grid.Column="2" Grid.RowSpan="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- Right Side: NPC Details with Tabs -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title and Add Item Button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock 
                        Text="NPC Details" 
                        FontSize="20" 
                        FontWeight="SemiBold" 
                        VerticalAlignment="Center"/>
                    
                    <ui:Button 
                        Grid.Column="1" 
                        Content="Add Item" 
                        Icon="Add24" 
                        Appearance="Primary"/>
                </Grid>

                <!-- Content Section - Removed nested ScrollViewer -->
                <StackPanel Grid.Row="1">
                    <TextBlock 
                        Text="General" 
                        Style="{StaticResource SectionHeaderStyle}" 
                        Margin="0,0,0,10"/>
                    
                    <UniformGrid Columns="2">
                        <!-- NPC Define -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="NPC Define"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="NPC Definition ID"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="MaFl_Is"
                                    Height="32"/>
                        </Grid>

                        <!-- NPC Name -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="NPC Name"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="NPC Name ID"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="IDS_CHARACTER_INC_XYZ"
                                    Height="32"/>
                        </Grid>

                        <!-- Tab Namen -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Name Tab 1"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="First Tab Name"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="Tab 1"
                                    Name="TabName1"
                                    Height="32"/>
                        </Grid>

                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Name Tab 2"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Second Tab Name"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="Tab 2"
                                    Name="TabName2"
                                    Height="32"/>
                        </Grid>

                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Name Tab 3"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Third Tab Name"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="Tab 3"
                                    Name="TabName3"
                                    Height="32"/>
                        </Grid>

                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Name Tab 4"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Fourth Tab Name"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="Tab 4"
                                    Name="TabName4"
                                    Height="32"/>
                        </Grid>

                        <!-- NPC Image -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="NPC Image"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="NPC Image Path"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="IDS_CHARACTER_INC_000064"
                                    Height="32"/>
                        </Grid>

                        <!-- Menu -->
                        <Grid Style="{StaticResource FormFieldStyle}" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Menu"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Menu Type"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <Border Grid.Row="1" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" Background="{DynamicResource ControlFillColorDefaultBrush}" Height="Auto" MaxHeight="120">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <WrapPanel Orientation="Vertical">
                                        <CheckBox Content="MMI_DIALOG" Margin="5,5,10,2"/>
                                        <CheckBox Content="MMI_TRADE" Margin="5,2,10,2"/>
                                        <CheckBox Content="MMI_EXCHANGE" Margin="5,2,10,2"/>
                                        <CheckBox Content="MMI_UPGRADE" Margin="5,2,10,2"/>
                                        <CheckBox Content="MMI_AUCTION" Margin="5,2,10,2"/>
                                        <CheckBox Content="MMI_QUEST" Margin="5,2,10,5"/>
                                    </WrapPanel>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </UniformGrid>

                    <!-- "Custom" Section -->
                    <TextBlock 
                        Text="Custom" 
                        Style="{StaticResource SectionHeaderStyle}"
                        Margin="0,0,0,10"/>
                    
                    <UniformGrid Columns="2">
                        <!-- Vendor Type -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Vendor Type"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Vendor Type"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="II_CHP_RED"
                                    Height="32"/>
                        </Grid>

                        <!-- NPC Equip -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="NPC Equip"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="NPC Equipment"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="II_ARM_S_CLO_DOMAS_21, ..."
                                    Height="32"/>
                        </Grid>

                        <!-- NPC Figure -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="NPC Figure"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="NPC Gender"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ComboBox Grid.Row="1" Margin="0,0,0,0" Height="32">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                            </ComboBox>
                        </Grid>

                        <!-- Structure -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Structure"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="NPC Structure"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ComboBox Grid.Row="1" Margin="0,0,0,0" Height="32">
                                <ComboBoxItem Content="SRT_CASHSHOP"/>
                            </ComboBox>
                        </Grid>

                        <!-- Dialog File -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Dialog File"
                                        Style="{StaticResource FieldLabelStyle}"/>
                                <ui:SymbolIcon Symbol="Info20"
                                        Style="{StaticResource InfoIconStyle}">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="Dialog File Path"/>
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1"
                                    PlaceholderText="MaFl_Is.txt"
                                    Height="32"/>
                        </Grid>
                    </UniformGrid>

                    <!-- Shop Section with TabControl and DataGrid -->
                    <TextBlock 
                        Text="Shop" 
                        Style="{StaticResource SectionHeaderStyle}"
                        Margin="0,0,0,10"/>
                        
                    <TabControl x:Name="ShopTabControl">
                        <TabItem Header="{Binding ElementName=TabName1, Path=Text, TargetNullValue=Tab 1}">
                            <DataGrid Name="DataGrid1" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item ID" Binding="{Binding ItemId}" Width="100"/>
                                    <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ui:Button
                                                    Content="Delete"
                                                    Appearance="Danger"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="{Binding ElementName=TabName2, Path=Text, TargetNullValue=Tab 2}">
                            <DataGrid Name="DataGrid2" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item ID" Binding="{Binding ItemId}" Width="100"/>
                                    <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ui:Button
                                                    Content="Delete"
                                                    Appearance="Danger"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="{Binding ElementName=TabName3, Path=Text, TargetNullValue=Tab 3}">
                            <DataGrid Name="DataGrid3" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item ID" Binding="{Binding ItemId}" Width="100"/>
                                    <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ui:Button
                                                    Content="Delete"
                                                    Appearance="Danger"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="{Binding ElementName=TabName4, Path=Text, TargetNullValue=Tab 4}">
                            <DataGrid Name="DataGrid4" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item ID" Binding="{Binding ItemId}" Width="100"/>
                                    <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ui:Button
                                                    Content="Delete"
                                                    Appearance="Danger"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                    CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page> 
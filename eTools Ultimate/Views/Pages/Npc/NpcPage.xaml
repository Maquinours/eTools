<Page
    x:Class="eTools_Ultimate.Views.Pages.NpcPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="NpcPage"
    d:DataContext="{d:DesignInstance local:NpcPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="2209"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Common Styles  -->
        <Style x:Key="InfoIconStyle" TargetType="ui:SymbolIcon">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        </Style>

        <!--  MultiSelect ComboBox Style  -->
        <Style x:Key="MultiSelectComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton
                                x:Name="ToggleButton"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                BorderThickness="1"
                                Foreground="{TemplateBinding Foreground}"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                                            x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    x:Name="Text"
                                                    Margin="5,2"
                                                    Text="Select Menu Options..." />
                                                <Path
                                                    x:Name="Arrow"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M0,0 L8,8 L16,0"
                                                    Fill="{DynamicResource TextFillColorPrimaryBrush}" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup
                                x:Name="Popup"
                                AllowsTransparency="True"
                                IsOpen="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                PlacementTarget="{Binding ElementName=ToggleButton}"
                                PopupAnimation="Slide">
                                <Border
                                    MaxHeight="200"
                                    Background="{DynamicResource ApplicationBackgroundBrush}"
                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                    BorderThickness="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel x:Name="MenuItems">
                                            <CheckBox Margin="5,2" Content="MMI_DIALOG" />
                                            <CheckBox Margin="5,2" Content="MMI_TRADE" />
                                            <CheckBox Margin="5,2" Content="MMI_EXCHANGE" />
                                            <CheckBox Margin="5,2" Content="MMI_UPGRADE" />
                                            <CheckBox Margin="5,2" Content="MMI_AUCTION" />
                                            <CheckBox Margin="5,2" Content="MMI_QUEST" />
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormFieldStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,15,10" />
        </Style>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,15,0,15" />
        </Style>

        <!--  DataTemplate: General Section  -->
        <DataTemplate x:Key="GeneralSectionTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="General" />
                <UniformGrid Columns="2">
                    <!--  NPC Name  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="NPC Name" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Name of the NPC" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="Enter NPC name" />
                    </Grid>

                    <!--  NPC Key  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="NPC Key" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="NPC Key ID" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="IDS_CHARACTER_INC_XYZ" />
                    </Grid>

                    <!--  NPC Define  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="NPC Define" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="NPC Definition ID" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="MaFl_Is" />
                    </Grid>

                    <!--  Dialog File  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Dialog File" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Dialog File Path" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="MaFl_Is.txt" />
                    </Grid>

                    <!--  NPC Image  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="NPC Image" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="NPC Image Path" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBox
                                Grid.Column="0"
                                Height="32"
                                PlaceholderText="IDS_CHARACTER_INC_000064" />
                            <ui:Button
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Content="..." />
                            <Border
                                Grid.Column="2"
                                Width="32"
                                Height="32"
                                Margin="10,0,0,0"
                                BorderThickness="1">
                                <Image x:Name="NpcImagePreview" Margin="2" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Menu  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Menu" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Menu Options" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <ComboBox
                                Height="32"
                                HorizontalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                BorderThickness="1">
                                <ComboBox.Resources>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Border
                                                        x:Name="MainBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4">
                                                        <Grid>
                                                            <ToggleButton
                                                                Name="ToggleButton"
                                                                Height="32"
                                                                HorizontalAlignment="Stretch"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                                <ToggleButton.Template>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Grid Background="Transparent">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <ContentPresenter
                                                                                Margin="8,0,0,0"
                                                                                VerticalAlignment="Center"
                                                                                Content="Select Menu Options..." />
                                                                            <Path
                                                                                Grid.Column="1"
                                                                                Margin="0,0,8,0"
                                                                                HorizontalAlignment="Right"
                                                                                VerticalAlignment="Center"
                                                                                Data="M0,0 L4,4 L8,0"
                                                                                Fill="{DynamicResource TextFillColorPrimaryBrush}" />
                                                                        </Grid>
                                                                    </ControlTemplate>
                                                                </ToggleButton.Template>
                                                            </ToggleButton>
                                                            <Popup
                                                                Name="PART_Popup"
                                                                AllowsTransparency="True"
                                                                IsOpen="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                                Placement="Bottom"
                                                                PopupAnimation="Slide">
                                                                <Border
                                                                    MinWidth="{Binding ActualWidth, ElementName=MainBorder}"
                                                                    MaxHeight="200"
                                                                    Background="{DynamicResource ApplicationBackgroundBrush}"
                                                                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                                                    BorderThickness="1"
                                                                    CornerRadius="4">
                                                                    <ScrollViewer>
                                                                        <StackPanel>
                                                                            <CheckBox
                                                                                Height="32"
                                                                                Margin="8,4"
                                                                                VerticalContentAlignment="Center"
                                                                                Content="MMI_DIALOG" />
                                                                            <CheckBox
                                                                                Height="32"
                                                                                Margin="8,4"
                                                                                VerticalContentAlignment="Center"
                                                                                Content="MMI_TRADE" />
                                                                            <CheckBox
                                                                                Height="32"
                                                                                Margin="8,4"
                                                                                VerticalContentAlignment="Center"
                                                                                Content="MMI_EXCHANGE" />
                                                                            <CheckBox
                                                                                Height="32"
                                                                                Margin="8,4"
                                                                                VerticalContentAlignment="Center"
                                                                                Content="MMI_UPGRADE" />
                                                                            <CheckBox
                                                                                Height="32"
                                                                                Margin="8,4"
                                                                                VerticalContentAlignment="Center"
                                                                                Content="MMI_AUCTION" />
                                                                            <CheckBox
                                                                                Height="32"
                                                                                Margin="8,4"
                                                                                VerticalContentAlignment="Center"
                                                                                Content="MMI_QUEST" />
                                                                        </StackPanel>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </Grid>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

        <!--  DataTemplate: Tabs Section  -->
        <DataTemplate x:Key="TabsSectionTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Tabs" />
                <UniformGrid Columns="2">
                    <!--  Tab Name 1  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Tab Name 1" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Name of the first Tab" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Name="TabName1"
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="Tab 1" />
                    </Grid>

                    <!--  Tab Name 2  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Tab Name 2" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Name of the second Tab" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Name="TabName2"
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="Tab 2" />
                    </Grid>

                    <!--  Tab Name 3  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Tab Name 3" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Name of the third Tab" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Name="TabName3"
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="Tab 3" />
                    </Grid>

                    <!--  Tab Name 4  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Tab Name 4" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Name of the fourth Tab" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Name="TabName4"
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="Tab 4" />
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

        <!--  DataTemplate: Custom Section  -->
        <DataTemplate x:Key="CustomSectionTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Custom" />
                <UniformGrid Columns="2">
                    <!--  Vendor Type  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Vendor Type" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Type of Vendor" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="II_CHP_RED" />
                    </Grid>

                    <!--  NPC Equip  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="NPC Equip" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="NPC Equipment" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:TextBox
                            Grid.Row="1"
                            Height="32"
                            PlaceholderText="II_ARM_S_CLO_DOMAS_21, ..." />
                    </Grid>

                    <!--  NPC Figure  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="NPC Figure" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="NPC Gender" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ComboBox Grid.Row="1" Height="32">
                            <ComboBoxItem Content="Male" />
                            <ComboBoxItem Content="Female" />
                        </ComboBox>
                    </Grid>

                    <!--  Structure  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Structure" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="NPC Structure" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ComboBox Grid.Row="1" Height="32">
                            <ComboBoxItem Content="SRT_CASHSHOP" />
                        </ComboBox>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side: Search bar and ListView  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10,10,10,10"
                    BorderThickness="0"
                    Cursor=""
                    Icon="Search24"
                    PlaceholderText="Search..."
                    Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  ListView for NPC list  -->
            <Border
                Grid.Row="1"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1">
                <ListView
                    Margin="0,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding ViewModel.CharactersView}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,8,0"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Image
                                        Margin="2"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Source="{Binding Icon}"
                                        Stretch="Uniform" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding Id}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <ScrollViewer
            Grid.RowSpan="2"
            Grid.Column="2"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <!--  Right Side: NPC Details with Tabs  -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Title and Add Item Button  -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="NPC Details" />

                    <ui:Button Grid.Column="1" ToolTip="Undo">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>

                    <ui:Button
                        Grid.Column="2"
                        Margin="10,0,10,0"
                        ToolTip="Redo">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>

                    <ui:Button
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        Content="Save" />

                    <ui:Button
                        Grid.Column="4"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Expert"
                        Icon="Settings24" />

                    <ui:Button
                        Grid.Column="5"
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Content="Add"
                        Icon="Add24" />

                    <ui:Button
                        Grid.Column="6"
                        Background="#FD292F"
                        Content="Delete"
                        Icon="Delete24" />
                </Grid>

                <!--  Content Section - Removed nested ScrollViewer  -->
                <StackPanel Grid.Row="1">
                    <ContentControl ContentTemplate="{StaticResource GeneralSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource CustomSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource TabsSectionTemplate}" />

                    <!--  Neuer Shop-Bereich  -->
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Shop Items" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Linke Seite: VerfÃ¼gbare Items  -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <ui:TextBox
                                    Grid.Row="0"
                                    Margin="0,0,0,10"
                                    Icon="Search24"
                                    PlaceholderText="Search items..." />

                                <ListView
                                    Grid.Row="1"
                                    Height="300"
                                    AllowDrop="True"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                    Width="32"
                                                    Height="32"
                                                    Margin="0,0,8,0"
                                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                    BorderThickness="1">
                                                    <Image
                                                        Margin="2"
                                                        RenderOptions.BitmapScalingMode="HighQuality"
                                                        Source="{Binding Icon}"
                                                        Stretch="Uniform" />
                                                </Border>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                        Text="{Binding ItemId}" />
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>

                            <!--  Mittlerer Bereich: Pfeile  -->
                            <StackPanel
                                Grid.Column="1"
                                Margin="10,0"
                                VerticalAlignment="Center">
                                <ui:Button Margin="0,5">
                                    <ui:SymbolIcon Symbol="ArrowRight24" />
                                </ui:Button>
                                <ui:Button Margin="0,5">
                                    <ui:SymbolIcon Symbol="ArrowLeft24" />
                                </ui:Button>
                            </StackPanel>

                            <!--  Rechte Seite: Shop Items  -->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontWeight="SemiBold"
                                    Text="Items in Shop" />

                                <!--  Tab Buttons  -->
                                <StackPanel
                                    Grid.Row="1"
                                    Margin="0,0,0,10"
                                    Orientation="Horizontal">
                                    <ui:Button
                                        Width="60"
                                        Margin="0,0,5,0"
                                        Appearance="Primary"
                                        Content="Tab 1" />
                                    <ui:Button
                                        Width="60"
                                        Margin="0,0,5,0"
                                        Appearance="Secondary"
                                        Content="Tab 2" />
                                    <ui:Button
                                        Width="60"
                                        Margin="0,0,5,0"
                                        Appearance="Secondary"
                                        Content="Tab 3" />
                                    <ui:Button
                                        Width="60"
                                        Appearance="Secondary"
                                        Content="Tab 4" />
                                </StackPanel>

                                <ListView
                                    Grid.Row="2"
                                    Height="300"
                                    AllowDrop="True"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                    Width="32"
                                                    Height="32"
                                                    Margin="0,0,8,0"
                                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                    BorderThickness="1">
                                                    <Image
                                                        Margin="2"
                                                        RenderOptions.BitmapScalingMode="HighQuality"
                                                        Source="{Binding Icon}"
                                                        Stretch="Uniform" />
                                                </Border>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                        Text="{Binding ItemId}" />
                                                </StackPanel>
                                                <ui:Button
                                                    Grid.Column="2"
                                                    Appearance="Danger"
                                                    Icon="Delete24"
                                                    ToolTip="Entfernen" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Grid>

                        <!--  Ãbersichtsliste  -->
                        <TextBlock
                            Margin="0,20,0,10"
                            Style="{StaticResource SectionHeaderStyle}"
                            Text="Shop Overview" />

                        <Grid>
                            <!--  Header  -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                <Border Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            Text="Icon" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontWeight="SemiBold"
                                            Text="Item Name" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontWeight="SemiBold"
                                            Text="Amount" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontWeight="SemiBold"
                                            Text="Price" />
                                    </Grid>
                                </Border>
                            </Grid>

                            <!--  Liste  -->
                            <ListView
                                Grid.Row="1"
                                Margin="0,0,0,20"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>

                                            <Border
                                                Grid.Column="0"
                                                Width="32"
                                                Height="32"
                                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                BorderThickness="1">
                                                <Image
                                                    Margin="2"
                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                    Source="{Binding Icon}"
                                                    Stretch="Uniform" />
                                            </Border>

                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Text="{Binding Name}" />

                                            <ui:NumberBox
                                                Grid.Column="2"
                                                Width="80"
                                                HorizontalAlignment="Left"
                                                Maximum="9999"
                                                Minimum="1"
                                                Value="{Binding Amount}" />

                                            <ui:NumberBox
                                                Grid.Column="3"
                                                Width="80"
                                                HorizontalAlignment="Left"
                                                Maximum="999999999"
                                                Minimum="0"
                                                Value="{Binding Price}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page> 
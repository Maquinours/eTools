                </ScrollViewer>
            </Border>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Form  -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Add und Delete Buttons oben rechts  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,10,30,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                ZIndex="1">
                <ui:Button ToolTip="{i18n:StringLocalizer 'Undo'}">
                    <ui:SymbolIcon Symbol="ArrowUndo24" />
                </ui:Button>
                <ui:Button Margin="10,0" ToolTip="{i18n:StringLocalizer 'Redo'}">
                    <ui:SymbolIcon Symbol="ArrowRedo24" />
                </ui:Button>
                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Content="{i18n:StringLocalizer 'Save'}"
                    Icon="Save24" />
                <ui:Button
                    Margin="0,0,10,0"
                    Appearance="Secondary"
                    Content="{i18n:StringLocalizer 'Expert'}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Background="#2F70AF"
                    Content="{i18n:StringLocalizer 'Add'}" />
                <ui:Button Background="#FD292F" Content="{i18n:StringLocalizer 'Delete'}" />
            </StackPanel>

            <!--  Formulare  -->
            <Grid
                Grid.Row="1"
                Margin="20"
                VerticalAlignment="Top">

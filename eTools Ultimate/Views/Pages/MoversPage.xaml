                    </UniformGrid>
                    <Separator Margin="0,10,0,5" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="{i18n:StringLocalizer 'Configuration'}" />
                    <UniformGrid Columns="2">
                        <!--  Artificial Intelligence  -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Artificial Intelligence (AI)'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'AI behavior type'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:AutoSuggestBox
                                Grid.Row="1"
                                DisplayMemberPath="Value"
                                OriginalItemsSource="{Binding Path=ViewModel.AiIdentifiers, RelativeSource={RelativeSource AncestorType=Page}}"
                                Text="{Binding AiIdentifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <!--  Belligerence  -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Belligerence'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'Aggression level'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:AutoSuggestBox
                                Grid.Row="1"
                                DisplayMemberPath="Value"
                                OriginalItemsSource="{Binding Path=ViewModel.BelligerenceIdentifiers, RelativeSource={RelativeSource AncestorType=Page}}"
                                Text="{Binding BelligerenceIdentifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <!--  Artificial Intelligence  -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Rank'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'Rank of the mover'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:AutoSuggestBox
                                Grid.Row="1"
                                DisplayMemberPath="Value"
                                OriginalItemsSource="{Binding Path=ViewModel.RankIdentifiers, RelativeSource={RelativeSource AncestorType=Page}}"
                                Text="{Binding ClassIdentifier, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <!--  Killable  -->
                        <Grid Style="{StaticResource FormFieldStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Killable'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'Can the mover be killed'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:ToggleSwitch
                                Grid.Row="1"
                                IsChecked="{Binding Killable}"
                                OffContent="{i18n:StringLocalizer 'No'}"
                                OnContent="{i18n:StringLocalizer 'Yes'}" />
                        </Grid>
                        <!--  Level  -->
                        <Grid>
                            <Grid.Style>
                                <Style BasedOn="{StaticResource FormFieldStyle}" TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static models:MoverTypes.MONSTER}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Level'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'Level of the mover'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:NumberBox
                                Grid.Row="1"
                                SpinButtonPlacementMode="Inline"
                                Value="{Binding Prop.DwLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}" />
                        </Grid>

                        <!--  EXP Value  -->
                        <Grid>
                            <Grid.Style>
                                <Style BasedOn="{StaticResource FormFieldStyle}" TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static models:MoverTypes.MONSTER}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'EXP Value'}" />
                                <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                    <ui:SymbolIcon.ToolTip>
                                        <ToolTip Content="{i18n:StringLocalizer 'Experience value gained'}" />
                                    </ui:SymbolIcon.ToolTip>
                                </ui:SymbolIcon>
                            </StackPanel>
                            <ui:NumberBox
                                Grid.Row="1"
                                SpinButtonPlacementMode="Inline"
                                Value="{Binding Prop.NExpValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </UniformGrid>
                </StackPanel>
                <Separator Margin="0,10,0,5" />
            </StackPanel>
        </DataTemplate>

        <!--  DataTemplate: Stats Section  -->
        <DataTemplate x:Key="StatsSectionTemplate">
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static models:MoverTypes.MONSTER}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="{i18n:StringLocalizer 'Stats'}" />
                <UniformGrid Columns="2">
                    <!--  Health Points  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Health Points'}" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="{i18n:StringLocalizer 'Maximum health points'}" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            Grid.Row="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Prop.DwAddHp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  Mana Points  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="{i18n:StringLocalizer 'Mana Points'}" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="{i18n:StringLocalizer 'Maximum mana points'}" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            Grid.Row="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Prop.DwAddMp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberFormatConverter}}" />
                    </Grid>


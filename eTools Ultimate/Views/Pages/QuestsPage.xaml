<Page
    x:Class="eTools_Ultimate.Views.Pages.QuestsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="QuestPage"
    d:DataContext="{d:DesignInstance local:QuestsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="768"
    d:DesignWidth="1024"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Linke Seite  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  General Section  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Foreground="#00A2FF"
                    Text="{i18n:StringLocalizer 'General'}" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,5"
                        VerticalAlignment="Center"
                        Text="{i18n:StringLocalizer 'ID'}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,5"
                        Text="138" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,10,5"
                        VerticalAlignment="Center"
                        Text="{i18n:StringLocalizer 'Title'}" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,5"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'Door of Dark'}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,10,5"
                        VerticalAlignment="Center"
                        Text="{i18n:StringLocalizer 'Category'}" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,5"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'General'}" />

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5"
                        Orientation="Horizontal">
                        <CheckBox Margin="0,0,10,0" Content="Repeat" />
                        <CheckBox Margin="0,0,10,0" Content="Remove" />
                        <CheckBox Content="Hide Reward Information" />
                    </StackPanel>

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,5,10,5"
                        VerticalAlignment="Center"
                        Text="{i18n:StringLocalizer 'Begin NPC'}" />
                    <ComboBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="0,5,0,5"
                        Background="#333333"
                        Text="masa_saimayor" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="0,5,10,5"
                        VerticalAlignment="Center"
                        Text="{i18n:StringLocalizer 'End NPC'}" />
                    <ComboBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="0,5,0,5"
                        Background="#333333"
                        Text="masa_saimayor" />
                </Grid>

                <TextBlock
                    Grid.Row="2"
                    Margin="0,10,0,5"
                    Text="{i18n:StringLocalizer 'Location'}" />

                <!--  Dialog Sections  -->
                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                    <TextBlock
                        Margin="0,0,0,5"
                        Foreground="Yellow"
                        Text="{i18n:StringLocalizer 'Quest Complete Dialog'}" />
                    <TextBox
                        Height="60"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'Thank you, you did a great job.'}"
                        TextWrapping="Wrap" />

                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#1A1A1A"
                        Text="Dialog"
                        TextWrapping="Wrap" />
                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#1A1A1A"
                        Text="Dialog"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,10,0,5"
                        Foreground="Yellow"
                        Text="{i18n:StringLocalizer 'Quest Fail Dialog'}" />
                    <TextBox
                        Height="60"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'It is very easy to find the entrance of the temple in Fantasy Desert.'}"
                        TextWrapping="Wrap" />

                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#1A1A1A"
                        Text="{i18n:StringLocalizer 'Dialog'}"
                        TextWrapping="Wrap" />
                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#1A1A1A"
                        Text="{i18n:StringLocalizer 'Dialog'}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!--  Vertikale Linie  -->
            <Rectangle
                Grid.Column="1"
                Width="1"
                Margin="10,0"
                Fill="#404040" />

            <!--  Rechte Seite  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Quest Dialog Section  -->
                <StackPanel Grid.Row="0">
                    <TextBlock
                        Margin="0,0,0,5"
                        Foreground="Yellow"
                        Text="{i18n:StringLocalizer 'Quest Introduction Dialog'}" />
                    <TextBox
                        Height="60"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'Excuse me. If you are not busy, would you please listen to my story? Have'}"
                        TextWrapping="Wrap" />

                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'The Ivillis Temple was built by the followers of Ivillis, a leader from be'}"
                        TextWrapping="Wrap" />

                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'The temple is located in the Fantasy Desert, in the southern part of Saint'}"
                        TextWrapping="Wrap" />

                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'You seeâ€¦every mayor has to explore all the Islands of Madrigal. In the cou'}"
                        TextWrapping="Wrap" />

                    <TextBox
                        Height="60"
                        Margin="0,5"
                        Background="#333333"
                        Text="{i18n:StringLocalizer 'Would you please help me? I beg of you.'}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,10,0,5"
                        Foreground="Yellow"
                        Text="{i18n:StringLocalizer 'Quest Accept Dialog'}" />
                    <TextBox
                        Height="60"
                        Background="#333333"
                        Text="Thank you! Please, investigate the entrance of the temple for anything dan"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,10,0,5"
                        Foreground="Yellow"
                        Text="Quest Deny Dialog" />
                    <TextBox
                        Height="60"
                        Background="#333333"
                        Text="I cannot force you to help me if you are busy. But maybe, when you have th"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,10,0,5"
                        Foreground="Gray"
                        Text="Quest Details (Active)" />
                    <TextBox
                        Height="60"
                        Background="#1A1A1A"
                        Text="Quest Detail" />

                    <TextBlock
                        Margin="0,10,0,5"
                        Foreground="Yellow"
                        Text="Quest Details (Finished)" />
                    <TextBox
                        Height="60"
                        Background="#1A1A1A"
                        Text="Quest Detail" />
                </StackPanel>

                <!--  Begin Conditions Section  -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        Foreground="#00A2FF"
                        Text="Begin Conditions" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,10,5"
                            Foreground="Yellow"
                            Text="General" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,10,5"
                            Text="Level" />
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Horizontal">
                            <TextBox
                                Width="50"
                                Background="#333333"
                                Text="45" />
                            <TextBox
                                Width="50"
                                Margin="5,0,0,0"
                                Background="#333333"
                                Text="70" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,5,10,5"
                            Text="Sex" />
                        <ComboBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Background="#333333"
                            Text="Any" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,5,10,5"
                            Text="Required Skill" />
                        <ComboBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Background="#333333"
                            Text="[None]" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,5,10,5"
                            Text="Skill Level" />
                        <TextBox
                            Grid.Row="4"
                            Grid.Column="1"
                            Background="#333333"
                            Text="0" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,5,10,5"
                            Text="Min. PK Value" />
                        <TextBox
                            Grid.Row="5"
                            Grid.Column="1"
                            Background="#333333"
                            Text="0" />
                    </Grid>

                    <!--  Party and Guild Settings  -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Party Settings  -->
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Foreground="Yellow" Text="Party Settings" />
                            <ComboBox
                                Margin="0,5"
                                Background="#333333"
                                Text="Ignore" />
                            <CheckBox Margin="0,5" Content="Party Leader" />
                            <TextBlock Margin="0,5,0,0" Text="Type" />
                            <ComboBox
                                Margin="0,5"
                                Background="#333333"
                                Text="Exact Amount" />
                            <TextBlock Margin="0,5,0,0" Text="Amount" />
                            <TextBox Background="#333333" Text="0" />
                        </StackPanel>

                        <!--  Guild Settings  -->
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Foreground="Yellow" Text="Guild Settings" />
                            <ComboBox
                                Margin="0,5"
                                Background="#333333"
                                Text="Ignore" />
                            <CheckBox Margin="0,5" Content="Guild Leader" />
                            <TextBlock Margin="0,5,0,0" Text="Type" />
                            <ComboBox
                                Margin="0,5"
                                Background="#333333"
                                Text="Exact Amount" />
                            <TextBlock Margin="0,5,0,0" Text="Amount" />
                            <TextBox Background="#333333" Text="0" />
                        </StackPanel>
                    </Grid>

                    <!--  Job Settings  -->
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Foreground="Yellow" Text="Job Settings" />
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,10,5"
                                Text="Job Class" />
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="#333333" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,5,10,5"
                                Text="Required Job Class" />
                            <ComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Background="#333333" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page> 
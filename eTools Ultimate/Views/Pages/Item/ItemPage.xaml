                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:ToggleSwitch
                            Grid.Row="1"
                            IsChecked="False"
                            OffContent="No"
                            OnContent="Yes" />
                    </Grid>
                    <!--  Time-limited item  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Time-limited item" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Whether the item is time-limited" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:ToggleSwitch
                            Grid.Row="1"
                            IsChecked="False"
                            OffContent="No"
                            OnContent="Yes" />
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

        <!--  DataTemplate for ListView Items  -->
        <DataTemplate x:Key="ItemListTemplate">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1">
                    <Image
                        Margin="2"
                        Source="{Binding Icon}"
                        Stretch="Uniform" />
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="{Binding Name}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding Identifier}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!--  DataTemplate: Blinkwing Section  -->
        <DataTemplate x:Key="BlinkwingSectionTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Blinkwing" />
                <UniformGrid Columns="2">
                    <!--  Required Level  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Required Level" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Required level for teleportation" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            x:Name="RequiredLevelNumberBox"
                            Grid.Row="1"
                            Maximum="999"
                            Minimum="0"
                            SpinButtonPlacementMode="Inline" />
                    </Grid>

                    <!--  Teleport to the Nearest town  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Teleport to the Nearest town" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Teleports to the nearest town" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <CheckBox
                            x:Name="NearestTownCheckbox"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            Content="" />
                    </Grid>

                    <!--  World  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="World" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Target world for teleportation" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ComboBox x:Name="WorldComboBox" Grid.Row="1">
                            <ComboBoxItem Content="Flaris" IsSelected="True" />
                            <ComboBoxItem Content="Saint Morning" />
                            <ComboBoxItem Content="Darkon" />
                            <ComboBoxItem Content="Harmonin" />
                            <ComboBoxItem Content="Azria" />
                        </ComboBox>
                    </Grid>

                    <!--  Position  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Position (X, Y, Z)" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Target position (X, Y, Z)" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox
                                x:Name="XPositionNumberBox"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Text="X" />
                            <ui:NumberBox
                                x:Name="YPositionNumberBox"
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Text="Y" />
                            <ui:NumberBox
                                x:Name="ZPositionNumberBox"
                                Grid.Column="2"
                                Margin="5,0,0,0"
                                Text="Z" />
                        </Grid>
                    </Grid>

                    <!--  Angle  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Angle" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="View angle upon arrival" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            x:Name="AngleNumberBox"
                            Grid.Row="1"
                            Maximum="360"
                            Minimum="0"
                            SpinButtonPlacementMode="Inline" />
                    </Grid>

                    <!--  Chaotic spawn key  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Chaotic spawn key" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Key for random spawn point" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <TextBox x:Name="ChaoticSpawnKeyTextBox" Grid.Row="1" />
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

        <!--  DataTemplate: Misc Section  -->
        <DataTemplate x:Key="MiscSectionTemplate">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Misc" />
                <UniformGrid Columns="2">
                    <!--  Casting time  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Casting time" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Time required for casting" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ui:NumberBox
                            x:Name="CastingTimeNumberBox"
                            Grid.Row="1"
                            Minimum="0"
                            SpinButtonPlacementMode="Inline" />
                    </Grid>

                    <!--  Time  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Time" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Duration" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:NumberBox
                                x:Name="MinutesNumberBox"
                                Grid.Column="0"
                                Minimum="0"
                                SpinButtonPlacementMode="Inline" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,0,10,0"
                                VerticalAlignment="Center"
                                Text="min" />
                            <ui:NumberBox
                                x:Name="SecondsNumberBox"
                                Grid.Column="2"
                                Maximum="59"
                                Minimum="0"
                                SpinButtonPlacementMode="Inline" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="sec" />
                        </Grid>
                    </Grid>

                    <!--  SFX  -->
                    <Grid Style="{StaticResource FormFieldStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource FieldLabelStyle}" Text="SFX" />
                            <ui:SymbolIcon Style="{StaticResource InfoIconStyle}" Symbol="Info20">
                                <ui:SymbolIcon.ToolTip>
                                    <ToolTip Content="Sound effect when used" />
                                </ui:SymbolIcon.ToolTip>
                            </ui:SymbolIcon>
                        </StackPanel>
                        <ComboBox
                            x:Name="SfxComboBox"
                            Grid.Row="1"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding ViewModel.SfxSounds}"
                            SelectedValue="{Binding ViewModel.SelectedSfx, Mode=TwoWay}"
                            SelectedValuePath="Id" />
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Left Side - ListView  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <ui:TextBox
                    Margin="10,10,10,10"
                    BorderThickness="0"
                    Icon="Search24"
                    PlaceholderText="Suche..."
                    Text="{Binding ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  Item List  -->
            <ListView
                x:Name="ItemsListView"
                Background="Transparent"
                BorderThickness="0"
                IsSynchronizedWithCurrentItem="True"
                ItemTemplate="{StaticResource ItemListTemplate}"
                ItemsSource="{Binding ViewModel.ItemsView}"
                SelectionChanged="VirtualizingGridView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>

        <!--  Separator  -->
        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                            <Rectangle
                                Width="2"
                                Height="20"
                                Margin="0,2,0,2"
                                Fill="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!--  Right Side - Form  -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!--  Add und Delete Buttons oben rechts  -->
                <StackPanel
                    Margin="0,10,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    ZIndex="1">
                    <ui:Button ToolTip="Undo">
                        <ui:SymbolIcon Symbol="ArrowUndo24" />
                    </ui:Button>
                    <ui:Button Margin="10,0,10,0" ToolTip="Redo">
                        <ui:SymbolIcon Symbol="ArrowRedo24" />
                    </ui:Button>
                    <ui:Button
                        x:Name="SaveButton"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Content="Save" />
                    <ui:Button
                        x:Name="ExpertButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Expert" />
                    <ui:Button
                        x:Name="FilterButton"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Content="Filter">
                        <ui:Button.ContextMenu>
                            <ContextMenu Background="{DynamicResource ApplicationBackgroundBrush}">
                                <ScrollViewer
                                    MaxHeight="600"
                                    Padding="0,0,15,0"
                                    VerticalScrollBarVisibility="Auto">
                                    <StackPanel MinWidth="250">
                                        <TextBlock
                                            Margin="10,5,0,5"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            Text="Filter Sections" />

                                        <Border Padding="10,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <StackPanel>
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="General"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Inventory &amp; Stack"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Character Requirements"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Type &amp; Classification"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Combat Stats"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Resistance &amp; Alignment"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Blinkwing"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Misc"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Sound"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                                <CheckBox
                                                    Margin="0,2"
                                                    Content="Flags &amp; Conditions"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    IsChecked="True" />
                                            </StackPanel>
                                        </Border>

                                        <TextBlock
                                            Margin="10,10,0,5"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            Text="Filter Fields" />

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="General Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="ID"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Name"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Description"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Icon"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Tradeable"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Shop-able"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Inventory &amp; Stack Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Stack Size"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Price"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Inventory Slot"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Character Requirements Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Gender Restriction"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Required Level"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Job Requirements"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Combat Stats Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Min/Max"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Defense"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Attack Speed"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>

                                        <Border Margin="0,0,0,5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                                            <Expander
                                                Background="Transparent"
                                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                Header="Resistance Fields">
                                                <StackPanel Margin="20,5,5,5">
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Element Resistances"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                    <CheckBox
                                                        Margin="0,2"
                                                        Content="Alignment"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        IsChecked="True" />
                                                </StackPanel>
                                            </Expander>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </ContextMenu>
                        </ui:Button.ContextMenu>
                    </ui:Button>
                    <ui:Button
                        x:Name="AddButton"
                        Margin="0,0,10,0"
                        Background="#2F70AF"
                        Click="AddButton_Click"
                        Content="Add" />
                    <ui:Button
                        x:Name="DeleteButton"
                        Background="#FD292F"
                        Click="DeleteButton_Click"
                        Content="Delete" />
                </StackPanel>

                <!--  Formulare  -->
                <StackPanel Margin="20">
                    <ContentControl Content="{Binding ViewModel.ItemsView}" ContentTemplate="{StaticResource GeneralSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource InventoryStackSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource CharacterRequirementsSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource TypeClassificationSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource CombatStatsSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource ResistanceAlignmentSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource BlinkwingSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource MiscSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource SoundSectionTemplate}" />
                    <Separator Margin="0,10,0,5" />
                    <ContentControl ContentTemplate="{StaticResource FlagsConditionsSectionTemplate}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>

</Page>

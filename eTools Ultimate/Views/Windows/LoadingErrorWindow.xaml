<ui:FluentWindow
    x:Class="eTools_Ultimate.Views.Windows.LoadingErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools_Ultimate.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Loading error"
    Width="400"
    Height="200"
    d:DataContext="{d:DesignInstance local:LoadingErrorWindow,
                                     IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ResizeMode="NoResize"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Width="380"
                Height="Auto"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <StackPanel
                    Height="53"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Source="/Views/Windows/WarningIcon.png" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="Not all files could be loaded."
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
                <TextBlock
                    x:Name="ErrorMessageTextBox"
                    Height="Auto"
                    FontSize="12"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="120"
                    Height="30"
                    Margin="0,0,10,10"
                    Content="Go to Resource Path" Click="Button_Click" />
                <Button
                    Width="135"
                    Height="30"
                    Margin="0,0,10,10"
                    Content="Close Application" Click="Button_Click_1" />
            </StackPanel>
        </Grid>

    </Grid>
</ui:FluentWindow>

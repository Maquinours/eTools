<ui:ContentDialog
    x:Class="eTools.Views.Windows.WarningDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:eTools.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Warning"
    d:DesignHeight="200"
    d:DesignWidth="400"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="Cancel"
    DialogMaxWidth="400"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:WarningDialog}" />
    </ui:ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Image Source="/Views/Windows/WarningIcon.png" 
                   Width="32" 
                   Height="32" 
                   Margin="0,0,10,0"/>
            <TextBlock Text="Not all files could be loaded." 
                       TextAlignment="Center" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Go to Resource Path" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="GoToResourcePath_Click"/>
            <Button Content="Close Application" 
                    Width="120" 
                    Height="30"
                    Click="CloseApplication_Click"/>
        </StackPanel>
    </Grid>
</ui:ContentDialog> 
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>wpfui-icon.ico</ApplicationIcon>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="wpfui-icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="9.0.4" />
    <PackageReference Include="WPF-UI" Version="4.0.2" />
    <PackageReference Include="WPF-UI.DependencyInjection" Version="4.0.2" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.1" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0 " />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\wpfui-icon-256.png" />
    <None Remove="Assets\wpfui-icon-1024.png" />
    <None Remove="Views\Pages\AboutIcon.png" />
    <None Remove="Views\Pages\FolderPathIcon.png" />
    <None Remove="Views\Pages\PaintPaletteIcon.png" />
    <None Remove="Views\Pages\SettingPageBanner.jpg" />
    <None Remove="Views\Windows\SplashScreen.png" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="DDSImageParser">
      <HintPath>..\libs\net9.0\DDSImageParser.dll</HintPath>
    </Reference>
    <Reference Include="Scanner">
      <HintPath>..\libs\net9.0\Scanner.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\wpfui-icon-256.png" />
    <Resource Include="Assets\wpfui-icon-1024.png" />
    <Resource Include="Views\Pages\AboutIcon.png" />
    <Resource Include="Views\Pages\FolderPathIcon.png" />
    <Resource Include="Views\Pages\PaintPaletteIcon.png" />
    <Resource Include="Views\Pages\SettingPageBanner.jpg" />
    <Resource Include="Views\Windows\SplashScreen.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets\Icons\" />
  </ItemGroup>

</Project>
